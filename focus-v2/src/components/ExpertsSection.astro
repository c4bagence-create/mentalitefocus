<script>
  document.addEventListener('DOMContentLoaded', () => {
    // ========================================
    // SMART INTERVAL MANAGER
    // ========================================
    const expertsSection = document.getElementById('experts');
    let isVisible = false;
    
    const sectionObserver = new IntersectionObserver((entries) => {
      isVisible = entries[0].isIntersecting;
      if (isVisible) startAllIntervals();
      else stopAllIntervals();
    }, { threshold: 0.1 });
    
    if (expertsSection) sectionObserver.observe(expertsSection);
    
    document.addEventListener('visibilitychange', () => {
      if (document.hidden) stopAllIntervals();
      else if (isVisible) startAllIntervals();
    });
    
    const intervalConfigs = [];
    
    const createInterval = (callback, delay) => {
      const config = { callback, delay, id: null };
      intervalConfigs.push(config);
      if (isVisible) config.id = setInterval(callback, delay);
    };
    
    const startAllIntervals = () => {
      intervalConfigs.forEach(config => {
        if (!config.id) config.id = setInterval(config.callback, config.delay);
      });
    };
    
    const stopAllIntervals = () => {
      intervalConfigs.forEach(config => {
        if (config.id) { clearInterval(config.id); config.id = null; }
      });
    };

    // IA Terminal typing
    const cmds = [
      'G√©n√®re 10 noms de produits winner',
      '√âcris un script de vente high ticket',
      'Analyse cette landing page',
      'Cr√©e une s√©quence email 5 jours',
    ];
    let cmdIdx = 0, charIdx = 0;
    const cmdEls = document.querySelectorAll('[data-ai-cmd]');

    const typeCmd = () => {
      if (!isVisible) return setTimeout(typeCmd, 100);
      const cmd = cmds[cmdIdx];
      cmdEls.forEach(el => el.textContent = cmd.substring(0, charIdx));
      charIdx++;
      if (charIdx <= cmd.length) {
        setTimeout(typeCmd, 50);
      } else {
        setTimeout(() => {
          charIdx = 0;
          cmdIdx = (cmdIdx + 1) % cmds.length;
          typeCmd();
        }, 3000);
      }
    };
    typeCmd();

    // Dynamic counters
    createInterval(() => {
      // Meta Ads
      document.querySelectorAll('[data-spend]').forEach(el => {
        el.textContent = '‚Ç¨' + (4000 + Math.floor(Math.random() * 500)).toLocaleString('fr-FR');
      });
      document.querySelectorAll('[data-revenue]').forEach(el => {
        el.textContent = '‚Ç¨' + (25000 + Math.floor(Math.random() * 5000)).toLocaleString('fr-FR');
      });
      document.querySelectorAll('[data-roas]').forEach(el => {
        el.textContent = (5.5 + Math.random() * 2).toFixed(1) + 'x';
      });

      // Shopify
      document.querySelectorAll('[data-shop-sales]').forEach(el => {
        el.textContent = '‚Ç¨' + (4000 + Math.floor(Math.random() * 1500)).toLocaleString('fr-FR');
      });

      // Instagram
      document.querySelectorAll('[data-views]').forEach(el => {
        el.textContent = (140000 + Math.floor(Math.random() * 5000)).toLocaleString('fr-FR');
      });
    }, 3000);

    // === AUTO DASHBOARD ANIMATION ===
    const autoDashboards = document.querySelectorAll('[data-auto-dashboard]');
    
    autoDashboards.forEach(dashboard => {
      const items = dashboard.querySelectorAll('[data-auto-item]');
      const notif = dashboard.querySelector('[data-auto-notif]');
      const totalEl = dashboard.querySelector('[data-auto-total]');
      const salesEl = dashboard.querySelector('[data-auto-sales]');
      
      let totalMargin = 67;
      let salesCount = 12;
      let currentItemIndex = 0;
      
      const carStatuses = [
        { badge: '‚è≥ En vente', class: 'pending' },
        { badge: 'üëÄ Visite...', class: 'pending' },
        { badge: 'üí¨ N√©gociation', class: 'transit' },
        { badge: '‚úì VENDU', class: 'sold' },
      ];
      
      const animateAutoSale = () => {
        if (!isVisible) return;
        
        const item = items[currentItemIndex];
        if (!item) return;
        
        const badge = item.querySelector('[data-auto-badge]');
        let statusIndex = 0;
        
        // Animate through statuses
        const cycleStatus = () => {
          if (statusIndex < carStatuses.length) {
            const status = carStatuses[statusIndex];
            badge.textContent = status.badge;
            badge.className = 'auto-badge ' + status.class;
            
            if (status.class === 'sold') {
              // Show sold notification
              item.classList.add('selling');
              if (notif) {
                notif.classList.add('show');
                setTimeout(() => notif.classList.remove('show'), 2000);
              }
              
              // Update totals
              totalMargin += Math.floor(Math.random() * 10) + 15;
              salesCount++;
              if (totalEl) totalEl.textContent = '‚Ç¨' + totalMargin + 'K';
              if (salesEl) salesEl.textContent = salesCount.toString();
              
              setTimeout(() => {
                item.classList.remove('selling');
                // Reset to pending for next cycle
                setTimeout(() => {
                  badge.textContent = '‚è≥ En vente';
                  badge.className = 'auto-badge pending';
                  currentItemIndex = (currentItemIndex + 1) % items.length;
                }, 2000);
              }, 500);
            }
            
            statusIndex++;
            if (statusIndex < carStatuses.length) {
              setTimeout(cycleStatus, 1500);
            }
          }
        };
        
        cycleStatus();
      };
      
      // Start auto animation cycle
      setTimeout(animateAutoSale, 2000);
      createInterval(animateAutoSale, 10000);
    });
  });
</script>
