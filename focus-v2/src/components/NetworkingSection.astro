    };

    // Side Messages - Messages flottants sur les c√¥t√©s du t√©l√©phone
    const sideMsgs = document.querySelectorAll('.side-msg');
    let sideMsgIndex = 0;
    const sideMessages = [
      { user: 'Thomas_Ads', text: "CPC √† 0,14‚Ç¨ c'est bien ?" },
      { user: 'Julie_Ecom', text: "Mon CTR est √† 3.2%" },
      { user: 'Karim_Immo', text: "Deal sign√© √† 12K ! üî•" },
      { user: 'Emma_SMMA', text: "Client ferm√© ce matin" },
      { user: 'Lucas_SEO', text: "Top 1 Google en 2 semaines" },
      { user: 'Maxime_Auto', text: "Vendu en 3h seulement" },
