      // Hide all first with stagger
      sideMsgs.forEach((m, i) => {
        setTimeout(() => m.classList.remove('visible'), i * 100);
      });
      
      // Show 6 messages with stagger after a short delay
      setTimeout(() => {
        for (let i = 0; i < 6; i++) {
          const idx = (sideMsgIndex + i) % sideMessages.length;
