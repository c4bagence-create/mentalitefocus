---
/**
 * SEOCard - Carte SEO avec animation #3 ‚Üí #1
 * Le domaine mentalitefocus.com est cliquable
 */
---

<div class="seo-search" slot="left">
  <div class="search-bar">
    <span class="search-icon">üîç</span>
    <span class="search-query">formation business elite</span>
  </div>
  
  <div class="search-results" data-seo-results>
    <div class="result" data-rank="1">
      <span class="rank">#1</span>
      <span class="domain">concurrent.fr</span>
    </div>
    <div class="result" data-rank="2">
      <span class="rank">#2</span>
      <span class="domain">autre-site.com</span>
    </div>
    <div class="result focus" data-rank="3" data-seo-focus>
      <span class="rank gold">#3</span>
      <a 
        href="https://mentalitefocus.com" 
        target="_blank" 
        rel="noopener noreferrer"
        class="domain focus-link"
      >
        mentalitefocus.com
      </a>
      <span class="crown" data-seo-crown>üëë</span>
    </div>
  </div>
</div>

<div class="seo-progress" slot="right">
  <span class="prog-label">Progression SEO</span>
  
  <div class="prog-steps">
    <span class="step done">#10</span>
    <span class="step done">#5</span>
    <span class="step done">#3</span>
    <span class="step current" data-seo-step>#1</span>
  </div>
  
  <div class="prog-bar">
    <div class="prog-fill" data-seo-bar></div>
  </div>
  
  <div class="celebrate" data-seo-celebrate>üéâ #1 sur Google!</div>
</div>

<style>
  .seo-search {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .search-bar {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--bg-input);
    padding: 0.5rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.625rem;
    color: var(--text-secondary);
  }

  .search-icon {
    font-size: 0.75rem;
  }

  .search-results {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .result {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 0.5rem;
    background: var(--bg-input);
    border-radius: 0.375rem;
    font-size: 0.5625rem;
    transition: all 0.5s ease;
  }

  .result.focus {
    background: color-mix(in srgb, var(--gold) 10%, transparent);
    border: 1px solid color-mix(in srgb, var(--gold) 30%, transparent);
  }

  .rank {
    font-weight: 700;
    color: var(--text-muted);
    min-width: 1.25rem;
  }

  .rank.gold {
    color: var(--gold);
  }

  .domain {
    color: var(--text-secondary);
  }

  .focus-link {
    color: #1a0dab;
    font-weight: 700;
    text-decoration: none;
    cursor: pointer;
    transition: color 0.2s;
  }

  .focus-link:hover {
    text-decoration: underline;
    color: #1558d6;
  }

  :global(.dark) .focus-link {
    color: #8ab4f8;
  }

  .crown {
    margin-left: auto;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .seo-progress {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.5rem;
    width: 100%;
  }

  .prog-label {
    font-size: 0.5rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .prog-steps {
    display: flex;
    gap: 0.5rem;
  }

  .step {
    font-size: 0.625rem;
    font-weight: 700;
    color: var(--text-muted);
    padding: 0.25rem 0.5rem;
    background: var(--bg-input);
    border-radius: 0.25rem;
  }

  .step.done {
    background: color-mix(in srgb, #22c55e 10%, transparent);
    color: #22c55e;
  }

  .step.current {
    background: var(--gold);
    color: black;
    animation: pulse 1s infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }

  .prog-bar {
    width: 100%;
    height: 0.25rem;
    background: var(--bg-input);
    border-radius: 0.125rem;
    overflow: hidden;
  }

  .prog-fill {
    height: 100%;
    background: linear-gradient(90deg, #22c55e, var(--gold));
    border-radius: 0.125rem;
    width: 0%;
    animation: seoProgress 4s ease-in-out infinite;
  }

  @keyframes seoProgress {
    0% { width: 0%; }
    50%, 100% { width: 100%; }
  }

  .celebrate {
    font-size: 0.75rem;
    font-weight: 900;
    color: var(--gold);
    opacity: 0;
    transform: scale(0.8);
    animation: celebrateFade 4s ease-in-out infinite;
  }

  @keyframes celebrateFade {
    0%, 40%, 100% { opacity: 0; transform: scale(0.8); }
    50%, 90% { opacity: 1; transform: scale(1); }
  }
</style>
