---
/**
 * ArsenalCard - Composant de base pour les cartes Arsenal
 * Utilise les slots Astro pour le contenu personnalis√©
 */
import type { ArsenalCard } from '../../data/arsenal';
import { tagColors } from '../../data/arsenal';

interface Props {
  card: ArsenalCard;
  class?: string;
}

const { card, class: className = '' } = Astro.props;
const tagClass = tagColors[card.tagColor];
---

<article 
  class:list={['arsenal-card', `card-${card.type}`, className]}
  data-card-id={card.id}
  data-card-type={card.type}
>
  <span class:list={['card-tag', tagClass]}>
    {card.tag}
  </span>
  
  <div class="card-left">
    <slot name="left" />
  </div>
  
  <div class="card-right">
    <slot name="right" />
  </div>
</article>

<style>
  .arsenal-card {
    position: relative;
    display: flex;
    width: 420px;
    height: 180px;
    flex-shrink: 0;
    border-radius: 1rem;
    border: 1px solid var(--border-medium);
    background: var(--bg-card);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .arsenal-card:hover {
    transform: translateY(-4px) scale(1.02);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .card-tag {
    position: absolute;
    top: 0.75rem;
    left: 0.75rem;
    z-index: 10;
    padding: 0.25rem 0.625rem;
    border-radius: 9999px;
    font-size: 0.5625rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .card-left,
  .card-right {
    flex: 1;
    padding: 1rem;
    padding-top: 2.5rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .card-right {
    border-left: 1px solid var(--border-light);
    align-items: flex-end;
  }

  /* Variantes de background par type */
  .card-fiscal {
    background: #fffef5;
  }

  :global(.dark) .card-fiscal {
    background: #1a1a18;
  }

  .card-auto,
  .card-google,
  .card-meta,
  .card-seo {
    background: white;
  }

  :global(.dark) .card-auto,
  :global(.dark) .card-google,
  :global(.dark) .card-meta,
  :global(.dark) .card-seo {
    background: var(--bg-card);
  }

  .card-tiktok {
    background: #000;
  }

  .card-influence {
    background: linear-gradient(135deg, #833AB4, #E1306C, #F77737);
  }

  .card-snap {
    background: #FFFC00;
  }
</style>
