---
/**
 * PricingSection - Carte Premium Focus 2026
 * Design moderne avec animations CSS natives
 */
---

<section class="pricing-section" id="pricing">
  <!-- Header -->
  <header class="section-header">
    <div class="badge">
      <span class="badge-dot"></span>
      <span>Offre Unique</span>
    </div>

    <h2 class="section-title">
      REJOINS<br>
      <span class="text-gradient">FOCUS.</span>
    </h2>

    <p class="section-desc">
      Accès illimité à tout l'écosystème. <strong>Pour le prix d'un kebab.</strong>
    </p>
  </header>

  <!-- Premium Card - Carte bancaire 3D -->
  <div class="card-container">
    <div class="premium-card-3d">
      <!-- Carte bancaire -->
      <div class="credit-card">
        <!-- Background gradient -->
        <div class="card-bg"></div>

        <!-- Hologramme -->
        <div class="card-hologram"></div>

        <!-- Header: Logo FOCUS + BUSINESS -->
        <div class="card-header">
          <span class="card-focus">FOCUS</span>
          <span class="card-business">BUSINESS</span>
        </div>

        <!-- Chip -->
        <div class="card-chip">
          <div class="chip-line"></div>
          <div class="chip-line"></div>
          <div class="chip-line"></div>
          <div class="chip-line"></div>
        </div>

        <!-- Contactless -->
        <div class="contactless">
          <span>))))</span>
        </div>

        <!-- Prix centré -->
        <div class="card-price-center">
          <span class="price-symbol">€</span>
          <span class="price-amount">9,90</span>
          <span class="price-period">/MOIS</span>
        </div>

        <!-- Member since -->
        <div class="card-member-since">MEMBER SINCE 2026</div>

        <!-- Footer: Holder + Status -->
        <div class="card-footer">
          <div class="card-holder">
            <span class="card-label">HOLDER</span>
            <span class="card-value">FUTUR MEMBRE</span>
          </div>
          <div class="card-status">
            <span class="card-label">STATUS</span>
            <span class="card-value-gold">PLATINUM</span>
          </div>
        </div>

        <!-- CTA Button -->
        <a href="https://espace.mentalitefocus.com/checkout" class="card-cta" id="premium-card">
          <span>REJOINDRE LE CLUB</span>
        </a>
      </div>

      <!-- Floating Benefits Cards -->
      <div class="benefit-card benefit-1">
        <div class="benefit-check">✓</div>
        <div class="benefit-icon">
          <svg viewBox="0 0 24 24" fill="#95BF47">
            <path d="M3 3h18v18H3V3zm3 3v12h12V6H6zm3 3h6v6H9V9z"/>
          </svg>
        </div>
        <span class="benefit-text">97 Thèmes Shopify</span>
      </div>

      <div class="benefit-card benefit-2">
        <div class="benefit-check">✓</div>
        <div class="benefit-icon">
          <svg viewBox="0 0 24 24" fill="#FFD700">
            <path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2z"/>
          </svg>
        </div>
        <span class="benefit-text">Prompts IA Premium</span>
      </div>

      <div class="benefit-card benefit-3">
        <div class="benefit-check">✓</div>
        <div class="benefit-icon">
          <svg viewBox="0 0 24 24" fill="#EC4899">
            <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/>
          </svg>
        </div>
        <span class="benefit-text">Notion Focus OS</span>
      </div>

      <div class="benefit-card benefit-4">
        <div class="benefit-check">✓</div>
        <div class="benefit-icon">
          <svg viewBox="0 0 24 24" fill="#06B6D4">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
          </svg>
        </div>
        <span class="benefit-text">Agent Sourcing</span>
      </div>

      <div class="benefit-card benefit-5">
        <div class="benefit-check">✓</div>
        <div class="benefit-icon">
          <svg viewBox="0 0 24 24" fill="#8B5CF6">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
        </div>
        <span class="benefit-text">Lives Exclusifs</span>
      </div>

      <div class="benefit-card benefit-6">
        <div class="benefit-check">✓</div>
        <div class="benefit-icon">
          <svg viewBox="0 0 24 24" fill="#10B981">
            <path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>
          </svg>
        </div>
        <span class="benefit-text">Communauté VIP</span>
      </div>
    </div>
  </div>
</section>

<style>
  .pricing-section {
    position: relative;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 5rem 1.5rem;
  }

  /* Header */
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1.25rem;
    border-radius: 9999px;
    border: 1px solid var(--border-medium);
    background: var(--bg-card);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: var(--gold);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.2); }
  }

  .section-title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 900;
    line-height: 0.9;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .text-gradient {
    background: linear-gradient(135deg, var(--gold-light), var(--gold), var(--gold-dark));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-desc {
    font-size: 1.125rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .section-desc strong {
    color: var(--gold);
    font-weight: 700;
  }

  /* Card Container */
  .card-container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    perspective: 2000px;
  }

  /* Premium Card 3D Container */
  .premium-card-3d {
    position: relative;
    width: 100%;
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Credit Card - Ultra réaliste Amex style */
  .credit-card {
    position: relative;
    width: 100%;
    max-width: 320px;
    aspect-ratio: 0.63;
    background: #0d0d0d;
    border-radius: 16px;
    padding: 1.5rem;
    box-shadow:
      0 8px 24px rgba(0, 0, 0, 0.6),
      0 2px 8px rgba(0, 0, 0, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.02);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    z-index: 10;
    border: 1px solid rgba(255, 255, 255, 0.03);
  }

  .credit-card:hover {
    transform: translateY(-2px);
    box-shadow:
      0 12px 32px rgba(0, 0, 0, 0.7),
      0 4px 12px rgba(0, 0, 0, 0.5),
      inset 0 1px 0 rgba(255, 255, 255, 0.03);
  }

  @media (min-width: 640px) {
    .credit-card {
      max-width: 420px;
      aspect-ratio: 1.586;
      padding: 1.875rem;
      border-radius: 18px;
    }
  }

  @media (min-width: 768px) {
    .credit-card {
      max-width: 500px;
      padding: 2.125rem;
      border-radius: 20px;
    }
  }

  @media (min-width: 1024px) {
    .credit-card {
      max-width: 600px;
      padding: 2.375rem;
      border-radius: 20px;
    }
  }

  /* Card Background - Noir mat ultra sobre */
  .card-bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(145deg, #0a0a0a 0%, #111111 50%, #0d0d0d 100%);
    border-radius: 16px;
  }

  /* Hologramme - masqué pour effet réaliste */
  .card-hologram {
    display: none;
  }

  /* Chip - Style réaliste carte bancaire */
  .card-chip {
    position: relative;
    z-index: 2;
    width: 50px;
    height: 40px;
    background: linear-gradient(135deg, #d4af37 0%, #f4d03f 50%, #d4af37 100%);
    border-radius: 6px;
    padding: 6px;
    display: flex;
    flex-direction: column;
    gap: 2px;
    box-shadow:
      0 2px 8px rgba(0, 0, 0, 0.3),
      inset 0 0.5px 1px rgba(255, 255, 255, 0.4);
    margin-bottom: 1rem;
  }

  @media (min-width: 768px) {
    .card-chip {
      width: 56px;
      height: 44px;
      padding: 7px;
    }
  }

  .chip-line {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.15);
    border-radius: 1.5px;
  }

  /* Contactless - Symbol NFC sobre */
  .contactless {
    position: absolute;
    top: 1.5rem;
    left: 3.25rem;
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.25);
    font-weight: 300;
    letter-spacing: -0.15em;
    transform: rotate(90deg);
    z-index: 2;
    opacity: 0.8;
  }

  @media (min-width: 768px) {
    .contactless {
      font-size: 1.25rem;
      top: 2rem;
      left: 3.75rem;
    }
  }

  /* Header: FOCUS + BUSINESS - Style sobre Amex */
  .card-header {
    position: absolute;
    top: 1.75rem;
    left: 1.75rem;
    right: 1.75rem;
    z-index: 2;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  @media (min-width: 768px) {
    .card-header {
      top: 2.25rem;
      left: 2.25rem;
      right: 2.25rem;
    }
  }

  .card-focus {
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    color: rgba(255, 255, 255, 0.85);
  }

  .card-business {
    font-size: 0.6875rem;
    font-weight: 700;
    letter-spacing: 0.12em;
    color: #d4af37;
  }

  @media (min-width: 768px) {
    .card-focus {
      font-size: 1.375rem;
    }
    .card-business {
      font-size: 0.9375rem;
    }
  }

  /* Prix centré - Style sobre */
  .card-price-center {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 0.25rem;
    margin-top: 4.5rem;
    margin-bottom: 0.75rem;
  }

  @media (min-width: 768px) {
    .card-price-center {
      margin-top: 5.5rem;
    }
  }

  .price-symbol {
    font-size: 1.5rem;
    font-weight: 500;
    color: #d4af37;
  }

  .price-amount {
    font-size: 3.25rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.92);
    line-height: 1;
    letter-spacing: -0.02em;
  }

  .price-period {
    font-size: 0.8125rem;
    color: rgba(255, 255, 255, 0.45);
    font-weight: 500;
    letter-spacing: 0.04em;
    margin-left: 0.25rem;
  }

  @media (min-width: 768px) {
    .price-symbol {
      font-size: 2.25rem;
    }
    .price-amount {
      font-size: 4.5rem;
    }
    .price-period {
      font-size: 0.9375rem;
    }
  }

  /* Member since - Sobre */
  .card-member-since {
    position: relative;
    z-index: 2;
    text-align: center;
    font-size: 0.5625rem;
    font-weight: 500;
    letter-spacing: 0.12em;
    color: rgba(255, 255, 255, 0.35);
    margin-bottom: 2.25rem;
  }

  @media (min-width: 768px) {
    .card-member-since {
      font-size: 0.6875rem;
      margin-bottom: 2.75rem;
    }
  }

  /* Footer: Holder + Status - Style sobre Amex */
  .card-footer {
    position: relative;
    z-index: 2;
    display: flex;
    justify-content: space-between;
    margin-bottom: 1.25rem;
  }

  .card-holder,
  .card-status {
    display: flex;
    flex-direction: column;
    gap: 0.1875rem;
  }

  .card-label {
    font-size: 0.4375rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    color: rgba(255, 255, 255, 0.35);
    text-transform: uppercase;
  }

  .card-value {
    font-size: 0.6875rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.9);
    letter-spacing: 0.04em;
  }

  .card-value-gold {
    font-size: 0.6875rem;
    font-weight: 600;
    color: #d4af37;
    letter-spacing: 0.08em;
  }

  @media (min-width: 768px) {
    .card-label {
      font-size: 0.5625rem;
    }
    .card-value,
    .card-value-gold {
      font-size: 0.8125rem;
    }
  }

  /* CTA Button - Style sobre et premium */
  .card-cta {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 0.9375rem 1.75rem;
    background: linear-gradient(135deg, #d4af37 0%, #c9a227 100%);
    color: #000000;
    font-size: 0.8125rem;
    font-weight: 700;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    border-radius: 8px;
    box-shadow:
      0 4px 12px rgba(212, 175, 55, 0.3),
      inset 0 0.5px 0 rgba(255, 255, 255, 0.25);
    transition: all 0.2s ease;
  }

  .card-cta:hover {
    background: linear-gradient(135deg, #e0bb47 0%, #d4af37 100%);
    box-shadow:
      0 6px 16px rgba(212, 175, 55, 0.4),
      inset 0 0.5px 0 rgba(255, 255, 255, 0.3);
  }

  @media (min-width: 768px) {
    .card-cta {
      font-size: 0.875rem;
      padding: 1rem 1.75rem;
    }
  }

  /* Benefit Cards */
  .benefit-card {
    position: absolute;
    display: none;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: var(--bg-card);
    border: 1px solid var(--border-medium);
    border-radius: 0.75rem;
    font-size: 0.75rem;
    font-weight: 700;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    animation: benefitFloat 4s ease-in-out infinite;
    z-index: 5;
    backdrop-filter: blur(10px);
  }

  @media (min-width: 1024px) {
    .benefit-card {
      display: flex;
    }
  }

  @media (min-width: 1200px) {
    .benefit-card {
      font-size: 0.875rem;
    }
  }

  @keyframes benefitFloat {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-12px); }
  }

  .benefit-check {
    width: 1.5rem;
    height: 1.5rem;
    background: #10B981;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.875rem;
    color: white;
    flex-shrink: 0;
    box-shadow: 0 0 10px rgba(16, 185, 129, 0.4);
  }

  .benefit-icon {
    width: 1.75rem;
    height: 1.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .benefit-icon svg {
    width: 100%;
    height: 100%;
  }

  .benefit-text {
    color: var(--text-primary);
    white-space: nowrap;
  }

  /* Benefit Positions */
  .benefit-1 {
    top: 8%;
    left: -12%;
    animation-delay: 0s;
  }

  .benefit-2 {
    top: 22%;
    right: -12%;
    animation-delay: 0.8s;
  }

  .benefit-3 {
    top: 40%;
    left: -12%;
    animation-delay: 1.6s;
  }

  .benefit-4 {
    top: 56%;
    right: -12%;
    animation-delay: 2.4s;
  }

  .benefit-5 {
    bottom: 18%;
    left: -12%;
    animation-delay: 3.2s;
  }

  .benefit-6 {
    bottom: 5%;
    right: -12%;
    animation-delay: 4s;
  }

  /* Light Mode */
  :global(.light) .premium-card {
    background: white;
    border-color: rgba(0,0,0,0.1);
  }

  :global(.light) .premium-card:hover {
    border-color: var(--gold);
  }

  :global(.light) .card-badge {
    background: var(--gold);
    color: black;
  }

  :global(.light) .floating-perk {
    background: white;
    border-color: rgba(0,0,0,0.1);
  }
</style>
