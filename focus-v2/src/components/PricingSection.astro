---
/**
 * PricingSection - Carte Premium Focus 2026
 * Design moderne avec animations CSS natives
 */
---

<section class="pricing-section" id="pricing">
  <!-- Header -->
  <header class="section-header">
    <div class="badge">
      <span class="badge-dot"></span>
      <span>Offre Unique</span>
    </div>

    <h2 class="section-title">
      REJOINS<br>
      <span class="text-gradient">FOCUS.</span>
    </h2>

    <p class="section-desc">
      Accès illimité à tout l'écosystème. <strong>Pour le prix d'un repas.</strong>
    </p>

    <div class="pricing-subtitle">
      <p class="subtitle-main">Pour ceux qui veulent des résultats.</p>
      <p class="subtitle-sub">Sans engagement. Annulation facile.</p>
    </div>
  </header>

  <!-- Carte CENTURION Ultra Premium -->
  <div class="centurion-card">
    <!-- Background layers avec textures -->
    <div class="card-texture"></div>
    <div class="card-pattern"></div>
    <div class="card-reflection"></div>
    <div class="card-hologram"></div>

    <!-- Chip métal 3D -->
    <div class="metal-chip">
      <div class="chip-surface">
        <div class="chip-grid"></div>
      </div>
      <div class="chip-shine"></div>
    </div>

    <!-- Bande magnétique stylée -->
    <div class="magnetic-strip"></div>

    <!-- Contactless métal -->
    <div class="contactless-waves">
      <svg viewBox="0 0 40 40" fill="none">
        <path d="M14 20c0-3.31 2.69-6 6-6" stroke="url(#metalGradient)" stroke-width="2.5" stroke-linecap="round"/>
        <path d="M11 20c0-4.97 4.03-9 9-9" stroke="url(#metalGradient)" stroke-width="2.5" stroke-linecap="round" opacity="0.7"/>
        <path d="M8 20c0-6.63 5.37-12 12-12" stroke="url(#metalGradient)" stroke-width="2.5" stroke-linecap="round" opacity="0.4"/>
        <defs>
          <linearGradient id="metalGradient" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#d4af37"/>
            <stop offset="50%" style="stop-color:#f4d03f"/>
            <stop offset="100%" style="stop-color:#d4af37"/>
          </linearGradient>
        </defs>
      </svg>
    </div>

    <!-- Contenu carte -->
    <div class="centurion-content">
      <!-- Header premium -->
      <div class="centurion-header">
        <div class="brand-elite">
          <span class="brand-focus">FOCUS</span>
          <div class="brand-separator"></div>
          <span class="brand-tier">BUSINESS CLUB</span>
        </div>
        <div class="tier-badge">PLATINUM</div>
      </div>

      <!-- Body layout -->
      <div class="centurion-body">
        <!-- Left: Benefits avec design épuré -->
        <div class="benefits-elite">
          <div class="benefit-elite">
            <div class="benefit-marker"></div>
            <span>Accès illimité salons privés</span>
          </div>
          <div class="benefit-elite">
            <div class="benefit-marker"></div>
            <span>Stratégies E-com, IA & Branding</span>
          </div>
          <div class="benefit-elite">
            <div class="benefit-marker"></div>
            <span>Lives & Q&A hebdomadaires</span>
          </div>
          <div class="benefit-elite">
            <div class="benefit-marker"></div>
            <span>Réseau entrepreneurs premium</span>
          </div>
          <div class="benefit-elite">
            <div class="benefit-marker"></div>
            <span>Support prioritaire 24/7</span>
          </div>
        </div>

        <!-- Right: Prix avec effet métal 3D -->
        <div class="price-elite">
          <div class="price-label-elite">TARIF MENSUEL</div>
          <div class="price-display">
            <div class="price-metal">
              <span class="price-number">9,90</span>
              <span class="currency-symbol">€</span>
            </div>
            <div class="price-period-elite">/MOIS</div>
          </div>
          <div class="price-detail">Sans engagement</div>
        </div>
      </div>

      <!-- Footer avec CTA premium -->
      <div class="centurion-footer">
        <a href="https://espace.mentalitefocus.com/checkout" class="cta-centurion" id="premium-card">
          <div class="cta-bg-metal"></div>
          <span class="cta-text-elite">DEVENIR MEMBRE PREMIUM</span>
          <div class="cta-icon-arrow">→</div>
        </a>
        <div class="card-number">•••• •••• •••• 2026</div>
      </div>
    </div>
  </div>

  <!-- Ancienne carte 3D masquée -->
  <div class="card-container-old" style="display: none;">
    <div class="premium-card-3d">
      <div class="credit-card">
        <!-- Background gradient -->
        <div class="card-bg"></div>

        <!-- Hologramme -->
        <div class="card-hologram"></div>

        <!-- Header: Logo FOCUS + BUSINESS -->
        <div class="card-header">
          <span class="card-focus">FOCUS</span>
          <span class="card-business">BUSINESS</span>
        </div>

        <!-- Chip -->
        <div class="card-chip">
          <div class="chip-line"></div>
          <div class="chip-line"></div>
          <div class="chip-line"></div>
          <div class="chip-line"></div>
        </div>

        <!-- Contactless -->
        <div class="contactless">
          <span>))))</span>
        </div>

        <!-- Prix centré -->
        <div class="card-price-center">
          <span class="price-symbol">€</span>
          <span class="price-amount">9,90</span>
          <span class="price-period">/MOIS</span>
        </div>

        <!-- Member since -->
        <div class="card-member-since">MEMBER SINCE 2026</div>

        <!-- Footer: Holder + Status -->
        <div class="card-footer">
          <div class="card-holder">
            <span class="card-label">HOLDER</span>
            <span class="card-value">FUTUR MEMBRE</span>
          </div>
          <div class="card-status">
            <span class="card-label">STATUS</span>
            <span class="card-value-gold">PLATINUM</span>
          </div>
        </div>

        <!-- CTA Button -->
        <a href="https://espace.mentalitefocus.com/checkout" class="card-cta" id="premium-card">
          <span>ACCÉDER AU PREMIUM MAINTENANT</span>
        </a>
      </div>

      <!-- Floating Benefits Cards -->
      <div class="benefit-card benefit-1">
        <div class="benefit-check">✓</div>
        <div class="benefit-icon">
          <svg viewBox="0 0 24 24" fill="#10B981">
            <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
          </svg>
        </div>
        <span class="benefit-text">Accès TOTAL aux salons privés</span>
      </div>

      <div class="benefit-card benefit-2">
        <div class="benefit-check">✓</div>
        <div class="benefit-icon">
          <svg viewBox="0 0 24 24" fill="#FFD700">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
        </div>
        <span class="benefit-text">Stratégies E-com, IA & Branding</span>
      </div>

      <div class="benefit-card benefit-3">
        <div class="benefit-check">✓</div>
        <div class="benefit-icon">
          <svg viewBox="0 0 24 24" fill="#EC4899">
            <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
          </svg>
        </div>
        <span class="benefit-text">Lives & Q&A hebdomadaires</span>
      </div>

      <div class="benefit-card benefit-4">
        <div class="benefit-check">✓</div>
        <div class="benefit-icon">
          <svg viewBox="0 0 24 24" fill="#06B6D4">
            <path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>
          </svg>
        </div>
        <span class="benefit-text">Réseau d'entrepreneurs ambitieux</span>
      </div>

      <div class="benefit-card benefit-5">
        <div class="benefit-check">✓</div>
        <div class="benefit-icon">
          <svg viewBox="0 0 24 24" fill="#8B5CF6">
            <path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2z"/>
          </svg>
        </div>
        <span class="benefit-text">Entraide et réponses rapides 24/7</span>
      </div>
    </div>
  </div>
</section>

<style>
  .pricing-section {
    position: relative;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 5rem 1.5rem;
  }

  /* Header */
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1.25rem;
    border-radius: 9999px;
    border: 1px solid var(--border-medium);
    background: var(--bg-card);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: var(--gold);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.2); }
  }

  .section-title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 900;
    line-height: 0.9;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .text-gradient {
    background: linear-gradient(135deg, var(--gold-light), var(--gold), var(--gold-dark));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-desc {
    font-size: 1.125rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .section-desc strong {
    color: var(--gold);
    font-weight: 700;
  }

  .pricing-subtitle {
    text-align: center;
    margin-top: 1.5rem;
    margin-bottom: 1rem;
  }

  .subtitle-main {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .subtitle-sub {
    font-size: 0.875rem;
    color: var(--text-muted);
    font-style: italic;
  }

  /* CENTURION CARD - Ultra Premium Design */
  .centurion-card {
    position: relative;
    width: 100%;
    max-width: 380px;
    min-height: 280px;
    margin: 0 auto;
    border-radius: 18px;
    background:
      radial-gradient(circle at 20% 30%, rgba(25, 25, 28, 1) 0%, rgba(12, 12, 15, 1) 100%);
    padding: 1.75rem 1.5rem;
    overflow: hidden;
    box-shadow:
      0 25px 70px rgba(0, 0, 0, 0.7),
      0 0 0 1px rgba(212, 175, 55, 0.25),
      0 0 50px rgba(212, 175, 55, 0.08),
      inset 0 1px 2px rgba(255, 255, 255, 0.05),
      inset 0 -1px 2px rgba(0, 0, 0, 0.5);
    transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
    transform-style: preserve-3d;
  }

  .centurion-card:hover {
    transform: translateY(-8px) rotateX(2deg);
    box-shadow:
      0 40px 100px rgba(0, 0, 0, 0.8),
      0 0 0 1px rgba(212, 175, 55, 0.4),
      0 0 70px rgba(212, 175, 55, 0.15),
      0 0 100px rgba(212, 175, 55, 0.05),
      inset 0 2px 4px rgba(255, 255, 255, 0.08),
      inset 0 -2px 4px rgba(0, 0, 0, 0.6);
  }

  @media (min-width: 768px) {
    .centurion-card {
      max-width: 980px;
      min-height: 400px;
      padding: 3.5rem 3rem;
      border-radius: 24px;
    }
  }

  /* Texture Layer - Carbon fiber subtle */
  .card-texture {
    position: absolute;
    inset: 0;
    background:
      repeating-linear-gradient(
        45deg,
        rgba(255, 255, 255, 0.01) 0px,
        transparent 1px,
        transparent 2px,
        rgba(255, 255, 255, 0.01) 3px
      ),
      repeating-linear-gradient(
        -45deg,
        rgba(0, 0, 0, 0.02) 0px,
        transparent 1px,
        transparent 2px,
        rgba(0, 0, 0, 0.02) 3px
      );
    opacity: 0.3;
    pointer-events: none;
  }

  /* Pattern géométrique */
  .card-pattern {
    position: absolute;
    inset: 0;
    background-image:
      radial-gradient(circle at 70% 20%, rgba(212, 175, 55, 0.03) 0%, transparent 40%),
      radial-gradient(circle at 30% 80%, rgba(212, 175, 55, 0.02) 0%, transparent 40%);
    pointer-events: none;
  }

  /* Reflection métallique */
  .card-reflection {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      transparent 0%,
      rgba(255, 255, 255, 0.02) 25%,
      transparent 50%,
      rgba(255, 255, 255, 0.01) 75%,
      transparent 100%
    );
    opacity: 0;
    transition: opacity 0.5s ease;
    pointer-events: none;
  }

  .centurion-card:hover .card-reflection {
    opacity: 1;
  }

  /* Hologram effect */
  .card-hologram {
    position: absolute;
    inset: -50%;
    background: conic-gradient(
      from 0deg at 50% 50%,
      transparent 0deg,
      rgba(212, 175, 55, 0.05) 60deg,
      rgba(148, 210, 244, 0.03) 120deg,
      rgba(212, 175, 55, 0.05) 180deg,
      rgba(255, 105, 180, 0.03) 240deg,
      rgba(212, 175, 55, 0.05) 300deg,
      transparent 360deg
    );
    transform: translateX(-100%) translateY(-100%) rotate(0deg);
    transition: all 0.8s cubic-bezier(0.23, 1, 0.32, 1);
    pointer-events: none;
    opacity: 0;
  }

  .centurion-card:hover .card-hologram {
    transform: translateX(100%) translateY(100%) rotate(45deg);
    opacity: 1;
  }

  /* Metal Chip 3D */
  .metal-chip {
    position: absolute;
    top: 1.75rem;
    left: 1.5rem;
    width: 44px;
    height: 36px;
    background: linear-gradient(135deg,
      #e8d7a4 0%,
      #d4af37 20%,
      #f4d03f 40%,
      #d4af37 60%,
      #b8941f 80%,
      #d4af37 100%
    );
    border-radius: 7px;
    box-shadow:
      0 4px 14px rgba(0, 0, 0, 0.6),
      0 2px 5px rgba(0, 0, 0, 0.4),
      inset 0 1.5px 2px rgba(255, 255, 255, 0.4),
      inset 0 -1.5px 2px rgba(0, 0, 0, 0.4);
    padding: 5px;
    transform: translateZ(10px);
    transition: all 0.3s ease;
  }

  @media (min-width: 768px) {
    .metal-chip {
      top: 3.5rem;
      left: 3rem;
      width: 62px;
      height: 50px;
      padding: 7px;
      border-radius: 9px;
    }
  }

  .centurion-card:hover .metal-chip {
    box-shadow:
      0 8px 24px rgba(0, 0, 0, 0.7),
      0 3px 9px rgba(0, 0, 0, 0.5),
      0 0 20px rgba(212, 175, 55, 0.3),
      inset 0 2px 4px rgba(255, 255, 255, 0.5),
      inset 0 -2px 4px rgba(0, 0, 0, 0.5);
  }

  .chip-surface {
    width: 100%;
    height: 100%;
    background: radial-gradient(
      circle at 30% 30%,
      rgba(255, 255, 255, 0.3) 0%,
      rgba(212, 175, 55, 0.1) 50%,
      rgba(0, 0, 0, 0.2) 100%
    );
    border-radius: 5px;
    position: relative;
    overflow: hidden;
  }

  .chip-grid {
    width: 100%;
    height: 100%;
    background:
      repeating-linear-gradient(
        90deg,
        rgba(0, 0, 0, 0.2) 0px,
        transparent 1px,
        transparent 3px,
        rgba(0, 0, 0, 0.2) 4px
      ),
      repeating-linear-gradient(
        0deg,
        rgba(0, 0, 0, 0.2) 0px,
        transparent 1px,
        transparent 3px,
        rgba(0, 0, 0, 0.2) 4px
      );
  }

  .chip-shine {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
      45deg,
      transparent 0%,
      rgba(255, 255, 255, 0.2) 45%,
      rgba(255, 255, 255, 0.4) 50%,
      rgba(255, 255, 255, 0.2) 55%,
      transparent 100%
    );
    animation: chipShine 4s ease-in-out infinite;
  }

  @keyframes chipShine {
    0%, 100% { transform: translateX(-100%) translateY(-100%); }
    50% { transform: translateX(0%) translateY(0%); }
  }

  /* Bande magnétique */
  .magnetic-strip {
    position: absolute;
    top: 5.5rem;
    right: 0;
    width: 30%;
    height: 2px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(212, 175, 55, 0.4) 20%,
      rgba(212, 175, 55, 0.6) 50%,
      rgba(212, 175, 55, 0.4) 80%,
      transparent 100%
    );
    opacity: 0.4;
  }

  @media (min-width: 768px) {
    .magnetic-strip {
      top: 8rem;
      width: 25%;
      height: 3px;
    }
  }

  /* Contactless waves métal */
  .contactless-waves {
    position: absolute;
    top: 1.75rem;
    left: 4rem;
    width: 28px;
    height: 28px;
    transform: rotate(90deg);
    opacity: 0.6;
    transition: all 0.3s ease;
  }

  @media (min-width: 768px) {
    .contactless-waves {
      top: 3.5rem;
      left: 7rem;
      width: 40px;
      height: 40px;
    }
  }

  .centurion-card:hover .contactless-waves {
    opacity: 1;
    filter: drop-shadow(0 0 8px rgba(212, 175, 55, 0.4));
  }

  /* Content layout */
  .centurion-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    height: 100%;
  }

  @media (min-width: 768px) {
    .centurion-content {
      gap: 2.5rem;
    }
  }

  /* Header Elite */
  .centurion-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding-top: 3rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(212, 175, 55, 0.15);
  }

  @media (min-width: 768px) {
    .centurion-header {
      padding-top: 4.5rem;
      padding-bottom: 1.5rem;
    }
  }

  .brand-elite {
    display: flex;
    align-items: center;
    gap: 0.625rem;
  }

  @media (min-width: 768px) {
    .brand-elite {
      gap: 1rem;
    }
  }

  .brand-focus {
    font-size: 1.25rem;
    font-weight: 900;
    letter-spacing: 0.12em;
    background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.95) 0%,
      rgba(255, 255, 255, 0.7) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 3px 10px rgba(0, 0, 0, 0.4);
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
  }

  @media (min-width: 768px) {
    .brand-focus {
      font-size: 2.25rem;
      letter-spacing: 0.15em;
    }
  }

  .brand-separator {
    width: 1.5px;
    height: 18px;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(212, 175, 55, 0.6) 50%,
      transparent 100%
    );
  }

  @media (min-width: 768px) {
    .brand-separator {
      width: 2px;
      height: 24px;
    }
  }

  .brand-tier {
    font-size: 0.5rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    color: rgba(212, 175, 55, 0.9);
    text-shadow:
      0 0 12px rgba(212, 175, 55, 0.6),
      0 2px 5px rgba(0, 0, 0, 0.4);
    text-transform: uppercase;
  }

  @media (min-width: 768px) {
    .brand-tier {
      font-size: 0.875rem;
      letter-spacing: 0.2em;
    }
  }

  .tier-badge {
    padding: 0.25rem 0.625rem;
    background: linear-gradient(135deg,
      rgba(212, 175, 55, 0.15) 0%,
      rgba(212, 175, 55, 0.08) 100%
    );
    border: 1px solid rgba(212, 175, 55, 0.3);
    border-radius: 5px;
    font-size: 0.5rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    color: rgba(212, 175, 55, 0.95);
    text-shadow: 0 0 6px rgba(212, 175, 55, 0.4);
    box-shadow:
      0 2px 6px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  @media (min-width: 768px) {
    .tier-badge {
      padding: 0.375rem 0.875rem;
      border-radius: 6px;
      font-size: 0.625rem;
      letter-spacing: 0.12em;
    }
  }

  /* Body layout */
  .centurion-body {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    flex: 1;
  }

  @media (min-width: 768px) {
    .centurion-body {
      flex-direction: row;
      gap: 4rem;
      align-items: center;
    }
  }

  /* Benefits Elite */
  .benefits-elite {
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
    flex: 1;
  }

  @media (min-width: 768px) {
    .benefits-elite {
      gap: 1rem;
    }
  }

  .benefit-elite {
    display: flex;
