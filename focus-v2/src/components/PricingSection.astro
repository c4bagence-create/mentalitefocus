      0 35px 100px rgba(212, 175, 55, 0.3),
      0 15px 50px rgba(0, 0, 0, 0.4);
  }

  /* Card Shine */
  .card-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.05), transparent);
    animation: shine 4s ease-in-out infinite;
  }

  .premium-shine {
    background: linear-gradient(90deg, transparent, rgba(212,175,55,0.1), rgba(255,255,255,0.1), transparent);
    animation: shine 3s ease-in-out infinite;
  }

  @keyframes shine {
    0% { left: -100%; }
    100% { left: 200%; }
  }

  /* Hologram */
  .card-hologram {
    position: absolute;
    bottom: 20px;
    right: 20px;
    width: 50px;
    height: 35px;
    background: linear-gradient(135deg, 
      rgba(212,175,55,0.4), 
      rgba(255,255,255,0.3), 
      rgba(212,175,55,0.3),
      rgba(192,192,192,0.4)
    );
    background-size: 200% 200%;
    border-radius: 4px;
    animation: hologram 3s ease-in-out infinite;
  }

  @keyframes hologram {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  /* Popular Tag */
  .popular-tag {
    position: absolute;
    top: -1px;
    right: 20px;
    padding: 0.5rem 1.25rem;
    background: var(--gold);
    color: black;
    font-size: 0.6875rem;
    font-weight: 900;
    letter-spacing: 0.1em;
    border-radius: 0 0 0.5rem 0.5rem;
  }

  /* Card Top Row */
  .card-top-row {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
  }

  /* Card Chip - Payment Icons as Chip */
  .card-chip {
    position: relative;
    width: 65px;
    height: 50px;
    background: linear-gradient(135deg, #c9a227 0%, #a08020 50%, #c9a227 100%);
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-shadow: 
