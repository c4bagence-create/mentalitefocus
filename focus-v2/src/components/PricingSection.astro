<style>
  .pricing-section {
    position: relative;
    width: 100%;
    max-width: 1000px;
    margin: 0 auto;
    padding: 5rem 1.5rem;
  }

  /* ===== FLOATING PERKS - Positionn√©s AUTOUR ===== */
  .floating-perks {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 5;
  }

  .perk-card {
    position: absolute;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.875rem;
    border-radius: 0.5rem;
    font-size: 0.6875rem;
    font-weight: 700;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.25);
    animation: floatPerk 6s ease-in-out infinite;
    pointer-events: auto;
    transition: transform 0.3s ease;
  }

  .perk-card:hover {
    transform: scale(1.1) translateY(-5px) !important;
  }

  .perk-icon { font-size: 1rem; }

  @keyframes floatPerk {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }

  /* Positions - bien en dehors des cartes */
  .perk-1 { top: 8%; left: -5%; animation-delay: 0s; }
  .perk-2 { top: 15%; right: -5%; animation-delay: 1s; }
  .perk-3 { bottom: 15%; left: -5%; animation-delay: 2s; }
  .perk-4 { bottom: 8%; right: -5%; animation-delay: 3s; }

  /* Couleurs th√©matiques */
  .perk-shopify {
    background: linear-gradient(135deg, #95bf47, #5e8e3e);
    color: white;
  }
  .perk-whatsapp {
    background: linear-gradient(135deg, #25D366, #128C7E);
    color: white;
  }
  .perk-notion {
    background: #fff;
    color: #191919;
    border: 1px solid #e0e0e0;
  }
  .perk-ia {
    background: linear-gradient(135deg, #8B5CF6, #6D28D9);
    color: white;
  }

  @media (max-width: 900px) {
    .floating-perks { display: none; }
  }

  /* Header */
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 1rem;
    border-radius: 9999px;
    border: 1px solid var(--border-medium);
    background: var(--bg-card);
    font-size: 0.625rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
  }

  .badge-dot {
    width: 0.5rem;
    height: 0.5rem;
    background: var(--gold);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .section-title {
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 900;
    line-height: 0.9;
    color: var(--text-primary);
  }

  .text-gradient {
    background: linear-gradient(180deg, var(--gold-light), var(--gold), var(--gold-dark));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-desc {
    font-size: 1rem;
    color: var(--text-secondary);
    margin-top: 1rem;
  }

  .section-desc .gold { color: var(--gold); }

  /* Cards Wrapper */
  .cards-wrapper {
    position: relative;
    z-index: 10;
  }

  .cards-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    max-width: 800px;
    margin: 0 auto;
  }

  @media (min-width: 700px) {
    .cards-container {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
  }

  /* ===== BANK CARD BASE ===== */
  .bank-card {
    position: relative;
    border-radius: 1rem;
    overflow: hidden;
    transition: transform 0.4s ease, box-shadow 0.4s ease;
    perspective: 1000px;
  }

  /* Desktop: ratio carte bancaire */
  @media (min-width: 700px) {
    .bank-card {
      aspect-ratio: 1.586 / 1;
    }
  }

  .bank-card:hover {
    transform: translateY(-5px);
  }

  @media (min-width: 700px) {
    .bank-card:hover {
      transform: translateY(-8px) rotateX(5deg);
    }
  }

  .card-inner {
    height: 100%;
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 2;
  }

  @media (min-width: 700px) {
    .card-inner {
      padding: 1.5rem;
    }
  }

  /* FREE Card Style */
  .card-free {
    background: linear-gradient(145deg, #1a1a1a, #0d0d0d);
    border: 1px solid rgba(255,255,255,0.1);
    box-shadow: 0 20px 50px rgba(0,0,0,0.3);
  }

  .card-free:hover {
    box-shadow: 0 30px 60px rgba(0,0,0,0.4);
  }

  /* PREMIUM Card Style */
  .card-premium {
    background: linear-gradient(145deg, 
      #1a1a1a 0%,
      color-mix(in srgb, var(--gold) 15%, #0d0d0d) 50%,
      #0a0a0a 100%
    );
    border: 2px solid var(--gold);
    box-shadow: 
      0 0 0 1px rgba(212,175,55,0.3),
      0 25px 60px rgba(212,175,55,0.2),
      0 10px 30px rgba(0,0,0,0.3);
  }

  .card-premium:hover {
    box-shadow: 
      0 0 0 2px var(--gold),
      0 35px 80px rgba(212,175,55,0.3),
      0 15px 40px rgba(0,0,0,0.4);
  }

  /* Card Shine */
  .card-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(212,175,55,0.15), transparent);
    animation: cardShine 4s ease-in-out infinite;
  }

  @keyframes cardShine {
    0% { left: -100%; }
    50%, 100% { left: 200%; }
  }

  /* Hologram - Desktop only */
  .card-hologram {
    display: none;
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    width: 40px;
    height: 30px;
    background: linear-gradient(135deg, 
      rgba(212,175,55,0.5), 
      rgba(255,255,255,0.3), 
      rgba(212,175,55,0.4)
    );
    background-size: 200% 200%;
    border-radius: 4px;
    animation: holoShift 3s ease-in-out infinite;
    z-index: 3;
  }

  @media (min-width: 700px) {
    .card-hologram {
      display: block;
    }
  }

  @keyframes holoShift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  /* Popular Tag */
  .popular-tag {
    position: absolute;
    top: 0;
    right: 1.5rem;
    padding: 0.375rem 0.875rem;
    background: var(--gold);
    color: black;
    font-size: 0.5625rem;
    font-weight: 800;
    letter-spacing: 0.1em;
    border-radius: 0 0 0.5rem 0.5rem;
    z-index: 10;
  }

  /* Chip */
  .card-chip {
    width: 40px;
    height: 30px;
    border-radius: 5px;
    margin-bottom: 0.5rem;
    position: relative;
  }

  @media (min-width: 700px) {
    .card-chip {
      width: 45px;
      height: 35px;
      border-radius: 6px;
      margin-bottom: 0.75rem;
    }
  }

  .free-chip {
    background: linear-gradient(135deg, #888 0%, #555 100%);
  }

  .premium-chip {
    background: linear-gradient(135deg, #f5e6b8 0%, #d4af37 50%, #b8860b 100%);
    box-shadow: 0 0 20px rgba(212,175,55,0.4);
  }

  .chip-lines {
    position: absolute;
    left: 4px;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .chip-lines span {
    width: 4px;
    height: 2px;
    background: rgba(0,0,0,0.2);
    border-radius: 1px;
  }

  .chip-icons {
    position: absolute;
    inset: 4px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2px;
    font-size: 8px;
    font-weight: 900;
    color: rgba(0,0,0,0.4);
  }

  .chip-icons span {
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0,0,0,0.1);
    border-radius: 2px;
    cursor: pointer;
    transition: all 0.2s;
  }

  .chip-icons span:hover {
    background: rgba(0,0,0,0.2);
    color: rgba(0,0,0,0.6);
  }

  .chip-glow {
    position: absolute;
    inset: -8px;
    background: radial-gradient(circle, rgba(212,175,55,0.3) 0%, transparent 70%);
    animation: chipPulse 2s ease-in-out infinite;
  }

  @keyframes chipPulse {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 1; }
  }

  /* Card Content */
  .card-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .card-type {
    font-size: 0.5rem;
    font-weight: 700;
    letter-spacing: 0.2em;
    color: rgba(255,255,255,0.5);
    margin-bottom: 0.25rem;
  }

  .card-name {
    font-size: 1rem;
    font-weight: 800;
    color: rgba(255,255,255,0.9);
    margin: 0 0 0.5rem 0;
  }

  .card-price-row {
    display: flex;
    align-items: baseline;
    gap: 0.25rem;
    margin-bottom: 0.5rem;
  }

  @media (min-width: 700px) {
    .card-price-row {
      margin-bottom: 0.75rem;
    }
  }

  .card-price {
    font-size: 2.5rem;
    font-weight: 900;
    color: white;
    line-height: 1;
  }

  @media (min-width: 700px) {
    .card-price {
      font-size: 2rem;
    }
  }

  .card-period {
    font-size: 0.875rem;
    color: rgba(255,255,255,0.5);
  }

  @media (min-width: 700px) {
    .card-period {
      font-size: 0.75rem;
    }
  }

  .gold {
    color: var(--gold) !important;
  }

  /* Card List */
  .card-list {
    list-style: none;
    padding: 0;
    margin: 0 0 0.5rem 0;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  @media (min-width: 700px) {
    .card-list {
      margin: 0 0 auto 0;
      gap: 0.375rem;
    }
  }

  .card-list li {
    font-size: 0.75rem;
    color: rgba(255,255,255,0.6);
  }

  @media (min-width: 700px) {
    .card-list li {
      font-size: 0.6875rem;
    }
  }

  .card-list li.ok {
    color: rgba(255,255,255,0.9);
  }

  .card-list li.no {
    color: rgba(255,255,255,0.3);
    text-decoration: line-through;
  }

  .premium-list li.gold {
    color: var(--gold);
  }

  /* Card Buttons */
  .card-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    width: 100%;
    padding: 0.875rem;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    font-weight: 700;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all 0.3s ease;
    margin-top: auto;
  }

  @media (min-width: 700px) {
    .card-btn {
      padding: 0.625rem;
      font-size: 0.75rem;
      margin-top: 0.75rem;
    }
  }

  .free-btn {
    background: rgba(255,255,255,0.1);
    color: white;
    border: 1px solid rgba(255,255,255,0.2);
  }

  .free-btn:hover {
    background: rgba(255,255,255,0.15);
  }

  .premium-btn {
    background: linear-gradient(135deg, var(--gold), var(--gold-dark));
    color: black;
    box-shadow: 0 4px 15px rgba(212,175,55,0.4);
  }

  .premium-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(212,175,55,0.6);
  }

  .btn-arrow {
    transition: transform 0.3s ease;
  }

  .premium-btn:hover .btn-arrow {
    transform: translateX(4px);
  }

  /* Card Number & Bottom - Hidden on mobile */
  .card-number {
    display: none;
    font-family: 'Courier New', monospace;
    font-size: 0.6875rem;
    color: rgba(255,255,255,0.4);
    letter-spacing: 0.15em;
    margin-top: auto;
  }

  @media (min-width: 700px) {
    .card-number {
      display: block;
    }
  }

  .card-bottom {
    display: none;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
  }

  @media (min-width: 700px) {
    .card-bottom {
      display: flex;
    }
  }

  .card-valid {
    font-size: 0.5rem;
    color: rgba(255,255,255,0.4);
    letter-spacing: 0.1em;
  }

  /* Light Mode */
  :global(.light) .card-free {
    background: linear-gradient(145deg, #f5f5f5, #e8e8e8);
    border-color: rgba(0,0,0,0.1);
  }

  :global(.light) .card-free .card-name,
  :global(.light) .card-free .card-price,
  :global(.light) .card-free .card-list li.ok {
    color: #1a1a1a;
  }

  :global(.light) .card-premium {
    background: linear-gradient(145deg, 
      #fafafa 0%,
      color-mix(in srgb, var(--gold) 10%, #f5f5f5) 50%,
      #f0f0f0 100%
    );
  }
</style>
