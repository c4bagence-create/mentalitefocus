</section>

<style>
  .pricing-section {
    position: relative;
    width: 100%;
    /* max-width: 1200px;  Removed to allow full width bg */
    padding: 5rem 1.5rem;
    overflow: hidden;
    background: var(--bg-section); /* Fallback */
  }

  /* Pricing Content Container */
  .pricing-content {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Animated Background */
  .pricing-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .pricing-gradient {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 50% 50%, rgba(212, 175, 55, 0.08) 0%, transparent 60%);
    filter: blur(80px);
    opacity: 0.6;
    animation: pricingPulse 6s ease-in-out infinite;
  }

  @keyframes pricingPulse {
    0%, 100% { opacity: 0.5; transform: translate(-50%, -50%) scale(1); }
    50% { opacity: 0.7; transform: translate(-50%, -50%) scale(1.1); }
  }

  .pricing-grid {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(212, 175, 55, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(212, 175, 55, 0.03) 1px, transparent 1px);
    background-size: 40px 40px;
    mask-image: radial-gradient(circle at 50% 50%, black 0%, transparent 70%);
  }

  .pricing-particles {
    position: absolute;
    inset: 0;
  }

  .pp {
    position: absolute;
    width: 4px;
    height: 4px;
    background: var(--gold);
    border-radius: 50%;
    opacity: 0;
    animation: ppFloat 8s ease-in-out infinite;
  }

  .pp:nth-child(1) { left: 10%; top: 20%; animation-delay: 0s; }
  .pp:nth-child(2) { left: 80%; top: 60%; animation-delay: 1s; }
  .pp:nth-child(3) { left: 30%; top: 80%; animation-delay: 2s; }
  .pp:nth-child(4) { left: 70%; top: 30%; animation-delay: 3s; }
  .pp:nth-child(5) { left: 50%; top: 50%; animation-delay: 4s; }
  .pp:nth-child(6) { left: 20%; top: 40%; animation-delay: 5s; }

  @keyframes ppFloat {
    0% { opacity: 0; transform: translateY(0) scale(0); }
    50% { opacity: 0.4; transform: translateY(-20px) scale(1); }
    100% { opacity: 0; transform: translateY(-40px) scale(0); }
  }

  /* Header */
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1.25rem;
    border-radius: 9999px;
    border: 1px solid var(--border-medium);
    background: var(--bg-card);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: var(--gold);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.2); }
  }

  .section-title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 900;
    line-height: 0.9;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .text-gradient {
    background: linear-gradient(135deg, var(--gold-light), var(--gold), var(--gold-dark));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-desc {
    font-size: 1.125rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .section-desc strong {
    color: var(--gold);
    font-weight: 700;
  }

  .pricing-subtitle {
    text-align: center;
    margin-top: 1.5rem;
    margin-bottom: 1rem;
  }

  .subtitle-main {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .subtitle-sub {
    font-size: 0.875rem;
    color: var(--text-muted);
    font-style: italic;
  }

  /* CENTURION CARD - Ultra Premium Design */
  .centurion-card {
    position: relative;
    width: 100%;
    max-width: 380px;
    min-height: 280px;
    margin: 0 auto;
    border-radius: 18px;
    background:
      radial-gradient(circle at 20% 30%, rgba(25, 25, 28, 1) 0%, rgba(12, 12, 15, 1) 100%);
    padding: 1.75rem 1.5rem;
    overflow: hidden;
    box-shadow:
      0 25px 70px rgba(0, 0, 0, 0.7),
      0 0 0 1px rgba(212, 175, 55, 0.25),
      0 0 50px rgba(212, 175, 55, 0.08),
      inset 0 1px 2px rgba(255, 255, 255, 0.05),
      inset 0 -1px 2px rgba(0, 0, 0, 0.5);
    transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
    transform-style: preserve-3d;
  }

  .centurion-card:hover {
    transform: translateY(-8px) rotateX(2deg);
    box-shadow:
      0 40px 100px rgba(0, 0, 0, 0.8),
      0 0 0 1px rgba(212, 175, 55, 0.4),
      0 0 70px rgba(212, 175, 55, 0.15),
      0 0 100px rgba(212, 175, 55, 0.05),
      inset 0 2px 4px rgba(255, 255, 255, 0.08),
      inset 0 -2px 4px rgba(0, 0, 0, 0.6);
  }

  @media (min-width: 768px) {
    .centurion-card {
      max-width: 980px;
      min-height: 400px;
      padding: 3.5rem 3rem;
      border-radius: 24px;
    }
  }

  /* Texture Layer - Carbon fiber subtle */
  .card-texture {
    position: absolute;
    inset: 0;
    background:
      repeating-linear-gradient(
        45deg,
        rgba(255, 255, 255, 0.01) 0px,
        transparent 1px,
        transparent 2px,
        rgba(255, 255, 255, 0.01) 3px
      ),
      repeating-linear-gradient(
        -45deg,
        rgba(0, 0, 0, 0.02) 0px,
        transparent 1px,
        transparent 2px,
        rgba(0, 0, 0, 0.02) 3px
      );
    opacity: 0.3;
    pointer-events: none;
  }

  /* Pattern géométrique */
  .card-pattern {
    position: absolute;
    inset: 0;
    background-image:
      radial-gradient(circle at 70% 20%, rgba(212, 175, 55, 0.03) 0%, transparent 40%),
      radial-gradient(circle at 30% 80%, rgba(212, 175, 55, 0.02) 0%, transparent 40%);
    pointer-events: none;
  }

  /* Reflection métallique */
  .card-reflection {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      transparent 0%,
      rgba(255, 255, 255, 0.02) 25%,
      transparent 50%,
      rgba(255, 255, 255, 0.01) 75%,
      transparent 100%
    );
    opacity: 0;
    transition: opacity 0.5s ease;
    pointer-events: none;
  }

  .centurion-card:hover .card-reflection {
    opacity: 1;
  }

  /* Hologram effect */
  .card-hologram {
    position: absolute;
    inset: -50%;
    background: conic-gradient(
      from 0deg at 50% 50%,
      transparent 0deg,
      rgba(212, 175, 55, 0.05) 60deg,
      rgba(148, 210, 244, 0.03) 120deg,
      rgba(212, 175, 55, 0.05) 180deg,
      rgba(255, 105, 180, 0.03) 240deg,
      rgba(212, 175, 55, 0.05) 300deg,
      transparent 360deg
    );
    transform: translateX(-100%) translateY(-100%) rotate(0deg);
    transition: all 0.8s cubic-bezier(0.23, 1, 0.32, 1);
    pointer-events: none;
    opacity: 0;
  }

  .centurion-card:hover .card-hologram {
    transform: translateX(100%) translateY(100%) rotate(45deg);
    opacity: 1;
  }

  /* Metal Chip 3D */
  .metal-chip {
    position: absolute;
    top: 1.75rem;
    left: 1.5rem;
    width: 44px;
    height: 36px;
    background: linear-gradient(135deg,
      #e8d7a4 0%,
      #d4af37 20%,
      #f4d03f 40%,
      #d4af37 60%,
      #b8941f 80%,
      #d4af37 100%
    );
    border-radius: 7px;
    box-shadow:
      0 4px 14px rgba(0, 0, 0, 0.6),
      0 2px 5px rgba(0, 0, 0, 0.4),
      inset 0 1.5px 2px rgba(255, 255, 255, 0.4),
      inset 0 -1.5px 2px rgba(0, 0, 0, 0.4);
    padding: 5px;
    transform: translateZ(10px);
    transition: all 0.3s ease;
  }

  @media (min-width: 768px) {
    .metal-chip {
      top: 3.5rem;
      left: 3rem;
      width: 62px;
      height: 50px;
      padding: 7px;
      border-radius: 9px;
    }
  }

  .centurion-card:hover .metal-chip {
    box-shadow:
