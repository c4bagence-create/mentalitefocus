<style>
  .pricing-section {
    position: relative;
    width: 100%;
    max-width: 1100px;
    margin: 0 auto;
    padding: 5rem 1.5rem;
  }

  /* Header */
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 1rem;
    border-radius: 9999px;
    border: 1px solid var(--border-medium);
    background: var(--bg-card);
    font-size: 0.625rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
  }

  .badge-dot {
    width: 0.5rem;
    height: 0.5rem;
    background: var(--gold);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .section-title {
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 900;
    line-height: 0.9;
    color: var(--text-primary);
  }

  .text-gradient {
    background: linear-gradient(180deg, var(--gold-light), var(--gold), var(--gold-dark));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-desc {
    font-size: 1rem;
    color: var(--text-secondary);
    margin-top: 1rem;
  }

  .section-desc .gold {
    color: var(--gold);
  }

  /* Cards Container */
  .cards-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    position: relative;
    z-index: 10;
  }

  @media (min-width: 768px) {
    .cards-container {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
  }

  /* Pricing Card Base */
  .pricing-card {
    position: relative;
    padding: 2rem;
    border-radius: 1.25rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .pricing-card:hover {
    transform: translateY(-5px);
  }

  /* FREE Card */
  .card-free {
    background: var(--bg-card);
    border: 1px solid var(--border-medium);
  }

  .card-free:hover {
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
  }

  /* PREMIUM Card */
  .card-premium {
    background: linear-gradient(145deg, 
      color-mix(in srgb, var(--gold) 8%, var(--bg-card)) 0%,
      var(--bg-card) 100%
    );
    border: 2px solid var(--gold);
    box-shadow: 0 0 40px rgba(212, 175, 55, 0.15);
  }

  .card-premium:hover {
    box-shadow: 0 25px 60px rgba(212, 175, 55, 0.25);
  }

  /* Popular Badge */
  .popular-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    padding: 0.375rem 1rem;
    background: var(--gold);
    color: black;
    font-size: 0.6875rem;
    font-weight: 800;
    letter-spacing: 0.05em;
    border-radius: 9999px;
    white-space: nowrap;
  }

  /* Card Header */
  .card-header {
    margin-bottom: 1.5rem;
  }

  .card-badge {
    display: inline-block;
    font-size: 0.625rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
  }

  .premium-badge {
    color: var(--gold);
  }

  .card-title {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--text-primary);
    margin: 0;
  }

  .premium-title {
    color: var(--gold);
  }

  /* Card Price */
  .card-price {
    margin-bottom: 1.5rem;
    display: flex;
    align-items: baseline;
    gap: 0.25rem;
    flex-wrap: wrap;
  }

  .price-value {
    font-size: 3rem;
    font-weight: 900;
    color: var(--text-primary);
    line-height: 1;
  }

  .gold-text {
    background: linear-gradient(180deg, var(--gold-light), var(--gold));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .price-period {
    font-size: 1rem;
    color: var(--text-muted);
  }

  .price-note {
    width: 100%;
    font-size: 0.75rem;
    color: var(--text-muted);
    margin-top: 0.25rem;
  }

  /* Card Features */
  .card-features {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .feature {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.9375rem;
    color: var(--text-secondary);
  }

  .feature.ok {
    color: var(--text-primary);
  }

  .feature.no {
    color: var(--text-muted);
    text-decoration: line-through;
    opacity: 0.6;
  }

  .feature.gold {
    color: var(--text-primary);
  }

  .feature-icon {
    width: 1.25rem;
    height: 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .feature.ok .feature-icon {
    background: rgba(34, 197, 94, 0.15);
    color: #22c55e;
  }

  .feature.no .feature-icon {
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
  }

  .gold-icon {
    background: rgba(212, 175, 55, 0.2) !important;
    color: var(--gold) !important;
  }

  /* Card CTA */
  .card-cta {
    display: block;
    width: 100%;
    padding: 1rem;
    text-align: center;
    font-size: 0.9375rem;
    font-weight: 700;
    text-decoration: none;
    border-radius: 0.75rem;
    transition: all 0.3s ease;
  }

  .cta-free {
    background: var(--bg-input);
    color: var(--text-primary);
    border: 1px solid var(--border-medium);
  }

  .cta-free:hover {
    background: var(--bg-card-elevated);
    border-color: var(--text-muted);
  }

  .cta-premium {
    background: linear-gradient(135deg, var(--gold), var(--gold-dark));
    color: black;
    box-shadow: 0 4px 20px rgba(212, 175, 55, 0.3);
  }

  .cta-premium:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(212, 175, 55, 0.5);
  }

  /* Payment Row */
  .payment-row {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border-light);
  }

  .payment-label {
    font-size: 0.6875rem;
    color: var(--text-muted);
  }

  .payment-icons {
    display: flex;
    gap: 0.375rem;
  }

  .pay-icon {
    font-size: 0.875rem;
  }

  /* Floating Perks - Desktop only */
  .floating-perks {
    display: none;
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 5;
  }

  @media (min-width: 1024px) {
    .floating-perks {
      display: block;
    }
  }

  .perk-card {
    position: absolute;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.875rem;
    background: var(--bg-card);
    border: 1px solid var(--border-medium);
    border-radius: 0.5rem;
    font-size: 0.6875rem;
    font-weight: 600;
    color: var(--text-secondary);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
    animation: floatPerk 5s ease-in-out infinite;
    pointer-events: auto;
  }

  .perk-card:hover {
    border-color: var(--gold);
    color: var(--text-primary);
  }

  .perk-icon {
    font-size: 1rem;
  }

  @keyframes floatPerk {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }

  .perk-1 { top: 15%; left: -8%; animation-delay: 0s; }
  .perk-2 { top: 25%; right: -8%; animation-delay: 0.5s; }
  .perk-3 { bottom: 25%; left: -8%; animation-delay: 1s; }
  .perk-4 { bottom: 15%; right: -8%; animation-delay: 1.5s; }

  /* Light Mode Adjustments */
  :global(.light) .card-free {
    background: #fff;
  }

  :global(.light) .card-premium {
    background: linear-gradient(145deg, 
      color-mix(in srgb, var(--gold) 5%, #fff) 0%,
      #fff 100%
    );
  }
</style>
