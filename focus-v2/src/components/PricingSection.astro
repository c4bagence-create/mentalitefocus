<style>
  .pricing-section {
    position: relative;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 4rem 1rem;
    overflow: visible;
  }

  /* ===== FLOATING ADVANTAGE CARDS ===== */
  .floating-cards {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 50;
  }

  .float-card {
    position: absolute;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: var(--bg-card);
    border: 1px solid var(--border-medium);
    border-radius: 0.75rem;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    animation: floatCard 6s ease-in-out infinite;
    pointer-events: auto;
    backdrop-filter: blur(10px);
  }

  .float-card:hover {
    transform: scale(1.05);
    box-shadow: 0 15px 50px rgba(212, 175, 55, 0.2);
  }

  @keyframes floatCard {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .fc-icon {
    font-size: 1.25rem;
    width: 2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-input);
    border-radius: 0.5rem;
    flex-shrink: 0;
  }

  .fc-content {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .fc-label {
    font-size: 0.5rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--gold);
  }

  .fc-title {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--text-primary);
    white-space: nowrap;
  }

  .fc-badge {
    font-size: 0.5rem;
    font-weight: 800;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    text-transform: uppercase;
  }

  .fc-badge.sold {
    background: #22c55e;
    color: white;
  }

  /* Card Positions - Desktop */
  .fc-1 { top: 15%; left: 5%; animation-delay: 0s; }
  .fc-2 { top: 8%; right: 5%; animation-delay: 0.5s; }
  .fc-3 { top: 45%; left: 3%; animation-delay: 1s; }
  .fc-4 { top: 35%; right: 3%; animation-delay: 1.5s; }
  .fc-5 { bottom: 25%; right: 5%; animation-delay: 2s; }
  .fc-6 { bottom: 15%; left: 5%; animation-delay: 2.5s; }

  /* Mobile: Hide some cards, reposition others */
  @media (max-width: 1024px) {
    .fc-1 { top: 2%; left: 5%; }
    .fc-2 { top: 2%; right: 5%; }
    .fc-3, .fc-4 { display: none; }
    .fc-5 { bottom: 5%; right: 5%; }
    .fc-6 { bottom: 5%; left: 5%; }
  }

  @media (max-width: 768px) {
    .floating-cards {
      display: none;
    }
  }

  /* Header */
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
    z-index: 10;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 1rem;
    border-radius: 9999px;
    border: 1px solid var(--border-medium);
    background: var(--bg-card);
    font-size: 0.625rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
  }

  .badge-dot {
    width: 0.5rem;
    height: 0.5rem;
    background: var(--gold);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .section-title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 900;
    line-height: 0.9;
    color: var(--text-primary);
  }

  .text-gradient {
    background: linear-gradient(180deg, var(--gold-light), var(--gold), var(--gold-dark));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-desc {
    font-size: 1rem;
    color: var(--text-secondary);
    margin-top: 1rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .section-desc .gold {
    color: var(--gold);
  }

  /* Cards Slider - Mobile: horizontal scroll */
  .cards-slider {
    display: flex;
    gap: 1.5rem;
    padding: 1rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }

  .cards-slider::-webkit-scrollbar {
    display: none;
  }

  @media (min-width: 900px) {
    .cards-slider {
      flex-direction: row;
      justify-content: center;
      gap: 2.5rem;
      overflow: visible;
      padding: 2rem 1rem;
    }
  }

  /* Bank Card Base - Mobile first vertical */
  .bank-card {
    position: relative;
    flex: 0 0 85vw;
    max-width: 380px;
    min-height: 480px;
    padding: 1.75rem;
    border-radius: 1.25rem;
    overflow: hidden;
    scroll-snap-align: center;
    transition: transform 0.4s ease, box-shadow 0.4s ease;
    will-change: transform;
    backface-visibility: hidden;
    display: flex;
    flex-direction: column;
  }

  /* Desktop: Horizontal card */
  @media (min-width: 900px) {
    .bank-card {
      flex: 0 0 auto;
      width: 580px;
      max-width: 580px;
      min-height: auto;
      aspect-ratio: 1.6 / 1;
      padding: 2rem;
    }
  }

  .bank-card:hover {
    transform: translateY(-8px);
  }

  @media (min-width: 900px) {
    .bank-card:hover {
      transform: translateY(-10px) rotateX(3deg);
    }
  }

  /* FREE Card Style */
  .card-free {
    background: linear-gradient(145deg, #2a2a2a 0%, #1a1a1a 50%, #111 100%);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }

  .card-free:hover {
    box-shadow: 0 30px 80px rgba(0, 0, 0, 0.4);
  }

  /* PREMIUM Card Style */
  .card-premium {
    background: linear-gradient(145deg, 
      #1a1a1a 0%, 
      color-mix(in srgb, var(--gold) 12%, #0d0d0d) 30%,
      #0a0a0a 60%,
      color-mix(in srgb, var(--gold) 8%, #111) 100%
    );
    border: 2px solid color-mix(in srgb, var(--gold) 50%, transparent);
    box-shadow: 
      0 0 0 1px color-mix(in srgb, var(--gold) 20%, transparent),
      0 25px 80px rgba(212, 175, 55, 0.2),
      0 10px 40px rgba(0, 0, 0, 0.3);
  }

  .card-premium:hover {
    box-shadow: 
