---
/**
 * AnimatedCTA - Bouton CTA ultra premium
 * Design épuré, animations subtiles mais impactantes
 */
interface Props {
  href: string;
  label?: string;
  title: string;
  subtitle?: string;
  variant?: 'gold' | 'white' | 'dark';
}

const { href, label, title, subtitle, variant = 'gold' } = Astro.props;
---

<a href={href} class={`premium-cta cta-${variant}`} data-cta>
  <!-- Glow Effect -->
  <div class="cta-glow-wrap">
    <div class="cta-glow"></div>
  </div>
  
  <!-- Main Button -->
  <div class="cta-inner">
    <!-- Shine Effect -->
    <div class="cta-shine"></div>
    
    <!-- Content -->
    <div class="cta-content">
      {label && <span class="cta-label">{label}</span>}
      <span class="cta-title">{title}</span>
      {subtitle && <span class="cta-subtitle">{subtitle}</span>}
    </div>
    
    <!-- Arrow -->
    <div class="cta-arrow">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
        <path d="M5 12h14M12 5l7 7-7 7"/>
      </svg>
    </div>
  </div>
  
  <!-- Border Glow -->
  <div class="cta-border-glow"></div>
</a>

<style>
  /* Premium CTA - Design épuré et impactant */
  .premium-cta {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2rem;
    min-width: 260px;
    text-decoration: none;
    border-radius: 100px;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: visible;
  }

  /* Glow Wrapper */
  .cta-glow-wrap {
    position: absolute;
    inset: -20px;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .premium-cta:hover .cta-glow-wrap {
    opacity: 1;
  }

  .cta-glow {
    width: 100%;
    height: 100%;
    border-radius: 100px;
    filter: blur(30px);
  }

  .cta-gold .cta-glow { background: var(--gold); opacity: 0.5; }
  .cta-white .cta-glow { background: white; opacity: 0.3; }
  .cta-dark .cta-glow { background: var(--gold); opacity: 0.3; }

  /* Inner Button */
  .cta-inner {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    width: 100%;
    padding: 1rem 2rem;
    border-radius: 100px;
    overflow: hidden;
    z-index: 1;
  }

  .cta-gold .cta-inner {
    background: linear-gradient(135deg, var(--gold-light) 0%, var(--gold) 50%, var(--gold-dark) 100%);
  }

  .cta-white .cta-inner {
    background: white;
    border: 1px solid var(--border-medium);
  }

  .cta-dark .cta-inner {
    background: linear-gradient(135deg, #1a1a1a 0%, #0a0a0a 100%);
    border: 1px solid var(--border-medium);
  }

  /* Shine Effect */
  .cta-shine {
    position: absolute;
    top: 0;
    left: -150%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.3) 50%,
      transparent 100%
    );
    transform: skewX(-20deg);
    transition: left 0.6s ease;
  }

  .premium-cta:hover .cta-shine {
    left: 150%;
  }

  /* Content */
  .cta-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.125rem;
  }

  .cta-label {
    font-size: 0.5rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    opacity: 0.7;
  }

  .cta-gold .cta-label { color: rgba(0, 0, 0, 0.5); }
  .cta-white .cta-label { color: var(--text-muted); }
  .cta-dark .cta-label { color: var(--gold); opacity: 1; }

  .cta-title {
    font-size: 1rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    white-space: nowrap;
  }

  .cta-gold .cta-title { color: black; }
  .cta-white .cta-title { color: var(--text-primary); }
  .cta-dark .cta-title { color: white; }

  .cta-subtitle {
    font-size: 0.625rem;
    opacity: 0.6;
  }

  .cta-gold .cta-subtitle { color: rgba(0, 0, 0, 0.5); }
  .cta-white .cta-subtitle { color: var(--text-muted); }
  .cta-dark .cta-subtitle { color: var(--text-muted); }

  /* Arrow */
  .cta-arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    transition: all 0.3s ease;
    flex-shrink: 0;
  }

  .cta-gold .cta-arrow {
    background: rgba(0, 0, 0, 0.1);
  }

  .cta-white .cta-arrow {
    background: var(--bg-card-elevated);
  }

  .cta-dark .cta-arrow {
    background: var(--gold);
  }

  .cta-arrow svg {
    width: 1.25rem;
    height: 1.25rem;
    transition: transform 0.3s ease;
  }

  .cta-gold .cta-arrow svg { stroke: black; }
  .cta-white .cta-arrow svg { stroke: var(--text-primary); }
  .cta-dark .cta-arrow svg { stroke: black; }

  .premium-cta:hover .cta-arrow svg {
    transform: translateX(3px);
  }

  /* Border Glow */
  .cta-border-glow {
    position: absolute;
    inset: -2px;
    border-radius: 100px;
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .cta-gold .cta-border-glow {
    background: linear-gradient(135deg, var(--gold-light), var(--gold), var(--gold-dark));
    padding: 2px;
  }

  .cta-dark .cta-border-glow {
    box-shadow: 0 0 20px var(--gold-glow), inset 0 0 20px var(--gold-glow);
  }

  .premium-cta:hover .cta-border-glow {
    opacity: 0.5;
  }

  /* Hover State */
  .premium-cta:hover {
    transform: translateY(-2px);
  }

  .premium-cta:active {
    transform: translateY(0) scale(0.98);
  }

  /* Box Shadow */
  .cta-gold {
    box-shadow: 0 8px 30px rgba(212, 175, 55, 0.25);
  }

  .cta-gold:hover {
    box-shadow: 0 15px 50px rgba(212, 175, 55, 0.4);
  }

  .cta-white {
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
  }

  .cta-white:hover {
    box-shadow: 0 15px 50px rgba(0, 0, 0, 0.12);
  }

  .cta-dark {
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4), 0 0 15px rgba(212, 175, 55, 0.1);
  }

  .cta-dark:hover {
    box-shadow: 0 15px 50px rgba(0, 0, 0, 0.5), 0 0 30px rgba(212, 175, 55, 0.2);
  }

  /* Responsive */
  @media (max-width: 480px) {
    .premium-cta {
      min-width: auto;
      width: 100%;
      max-width: 280px;
      padding: 0.75rem 1.5rem;
    }

    .cta-inner {
      padding: 0.875rem 1.5rem;
      gap: 0.75rem;
    }

    .cta-title {
      font-size: 0.875rem;
    }

    .cta-arrow {
      width: 2rem;
      height: 2rem;
    }

    .cta-arrow svg {
      width: 1rem;
      height: 1rem;
    }
  }
</style>
