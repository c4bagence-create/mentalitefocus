<script>
  // Initialisation des animations apr√®s que le DOM soit pr√™t
  document.addEventListener('DOMContentLoaded', () => {
    // ========================================
    // SMART INTERVAL MANAGER
    // ========================================
    const arsenalSection = document.getElementById('arsenal');
    let isVisible = false;
    
    const sectionObserver = new IntersectionObserver((entries) => {
      isVisible = entries[0].isIntersecting;
      if (isVisible) startAllIntervals();
      else stopAllIntervals();
    }, { threshold: 0.1 });
    
    if (arsenalSection) sectionObserver.observe(arsenalSection);
    
    document.addEventListener('visibilitychange', () => {
      if (document.hidden) stopAllIntervals();
      else if (isVisible) startAllIntervals();
    });
    
    const intervalConfigs = [];
    
    const createInterval = (callback, delay) => {
      const config = { callback, delay, id: null };
      intervalConfigs.push(config);
      if (isVisible) config.id = setInterval(callback, delay);
    };
    
    const startAllIntervals = () => {
      intervalConfigs.forEach(config => {
        if (!config.id) config.id = setInterval(config.callback, config.delay);
      });
    };
    
    const stopAllIntervals = () => {
      intervalConfigs.forEach(config => {
        if (config.id) { clearInterval(config.id); config.id = null; }
      });
    };

    // Dupliquer les cartes pour l'effet infini
    const tracks = document.querySelectorAll('[data-marquee]');
    tracks.forEach(track => {
      track.innerHTML += track.innerHTML;
    });

    // Animation SEO #3 ‚Üí #1
    const animateSEO = () => {
      const focusResults = document.querySelectorAll('[data-seo-focus]');
      const crowns = document.querySelectorAll('[data-seo-crown]');
      const celebrates = document.querySelectorAll('[data-seo-celebrate]');
      
      // Reset
      focusResults.forEach(el => {
        const rank = el.querySelector('.rank');
        if (rank) rank.textContent = '#3';
        el.style.order = '2';
      });
      crowns.forEach(el => el.style.opacity = '0');
      celebrates.forEach(el => el.style.opacity = '0');
      
      // #2 apr√®s 2s
      setTimeout(() => {
        focusResults.forEach(el => {
          const rank = el.querySelector('.rank');
          if (rank) rank.textContent = '#2';
          el.style.order = '1';
        });
      }, 2000);
      
      // #1 apr√®s 4s
      setTimeout(() => {
        focusResults.forEach(el => {
          const rank = el.querySelector('.rank');
          if (rank) rank.textContent = '#1';
          el.style.order = '0';
        });
        crowns.forEach(el => el.style.opacity = '1');
        celebrates.forEach(el => el.style.opacity = '1');
      }, 4000);
    };
    
    animateSEO();
    createInterval(animateSEO, 8000);

    // Compteurs dynamiques
    let ecomTotal = 14250;
    createInterval(() => {
      ecomTotal += Math.floor(Math.random() * 200) + 30;
      document.querySelectorAll('[data-ecom-total]').forEach(el => {
        el.textContent = ecomTotal.toLocaleString('fr-FR') + '‚Ç¨';
      });
    }, 3000);

    // TikTok views
    let ttViews = 4.2;
    createInterval(() => {
      ttViews += Math.random() * 0.1;
      document.querySelectorAll('[data-tt-views]').forEach(el => {
        el.textContent = ttViews.toFixed(1) + 'M';
      });
    }, 2000);

    // Meta ROAS
    createInterval(() => {
      const roas = (5.5 + Math.random() * 2).toFixed(1);
      document.querySelectorAll('[data-meta-roas]').forEach(el => {
        el.textContent = roas + 'x';
      });
    }, 3000);

    // Google CTR
    const ctrValues = ['1.2%', '4.8%', '8.2%', '11.6%'];
    let ctrIndex = 0;
    createInterval(() => {
      ctrIndex = (ctrIndex + 1) % ctrValues.length;
      document.querySelectorAll('[data-google-ctr]').forEach(el => {
        el.textContent = ctrValues[ctrIndex];
      });
    }, 3000);

    // Instagram engagement
    createInterval(() => {
      const eng = (10 + Math.random() * 5).toFixed(1);
      document.querySelectorAll('[data-insta-eng]').forEach(el => {
        el.textContent = eng + '%';
      });
    }, 4000);
  });
