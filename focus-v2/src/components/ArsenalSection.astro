<style>
  .arsenal-section {
    position: relative;
    width: 100%;
    padding: 1rem 0;
    overflow: hidden;
    background: var(--bg-section);
  }

  /* Glows */
  .glow {
    position: absolute;
    border-radius: 50%;
    pointer-events: none;
    filter: blur(140px);
  }

  .glow-1 {
    top: 50%;
    left: 33%;
    transform: translate(-50%, -50%);
    width: 600px;
    height: 500px;
    background: var(--gold-glow);
    opacity: 0.5;
  }

  .glow-2 {
    top: 33%;
    right: 25%;
    width: 400px;
    height: 400px;
    background: var(--gold-glow);
    opacity: 0.4;
  }

  /* Header */
  .section-header {
    text-align: center;
    padding: 0 1.25rem;
    margin-bottom: 3rem;
    position: relative;
    z-index: 10;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 1rem;
    border-radius: 9999px;
    border: 1px solid var(--border-medium);
    background: var(--bg-card);
    font-size: 0.625rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
  }

  .badge-dot {
    width: 0.5rem;
    height: 0.5rem;
    background: var(--gold);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.1); }
  }

  .section-title {
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 900;
    line-height: 0.9;
    color: var(--text-primary);
  }

  .text-gradient {
    background: linear-gradient(180deg, var(--gold-light), var(--gold), var(--gold-dark));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-desc {
    color: var(--text-muted);
    font-size: 0.875rem;
    margin-top: 1rem;
  }

  .section-desc strong {
    color: var(--text-primary);
  }

  .section-desc .gold {
    color: var(--gold);
  }

  /* Marquee - Auto-scroll on all devices + manual scroll */
  .marquee-container {
    overflow-x: auto;
    width: 100%;
    margin-bottom: 1.25rem;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }

  .marquee-container::-webkit-scrollbar {
    display: none;
  }

  .marquee-track {
    display: flex;
    gap: 1.25rem;
    width: max-content;
    padding: 0.625rem 0;
    animation: marquee 30s linear infinite;
  }

  .marquee-track.reverse {
    animation: marquee-reverse 30s linear infinite;
  }

  .marquee-container:hover .marquee-track,
  .marquee-container:active .marquee-track {
    animation-play-state: paused;
  }

  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  @keyframes marquee-reverse {
    0% { transform: translateX(-50%); }
    100% { transform: translateX(0); }
  }

  /* Card Content Styles - E-Commerce */
  .ecom-stats {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .stat-label {
    font-size: 0.5rem;
    color: var(--text-muted);
    text-transform: uppercase;
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: 900;
    color: var(--text-primary);
  }

  .stat-badge {
    display: inline-block;
    font-size: 0.5625rem;
    font-weight: 700;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
  }

  .stat-badge.up {
    background: color-mix(in srgb, #22c55e 10%, transparent);
    color: #22c55e;
  }

  .mini-graph {
    display: flex;
    align-items: flex-end;
    gap: 0.25rem;
    height: 2rem;
    margin-top: 0.5rem;
  }

  .mini-graph .bar {
    flex: 1;
    background: #95bf47;
    border-radius: 0.125rem;
    height: var(--h);
    animation: barPulse 2s ease-in-out infinite;
    animation-delay: var(--delay);
  }

  @keyframes barPulse {
    0%, 100% { opacity: 0.6; }
    50% { opacity: 1; }
  }

  .ecom-orders {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    width: 100%;
  }

  .order {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.5625rem;
    color: var(--text-secondary);
    padding: 0.25rem 0.5rem;
    background: var(--bg-input);
    border-radius: 0.375rem;
  }

  .order.new {
    background: color-mix(in srgb, #95bf47 10%, transparent);
    border: 1px solid color-mix(in srgb, #95bf47 30%, transparent);
  }

  .order .price {
    margin-left: auto;
    font-weight: 700;
    color: #95bf47;
  }

  /* Invoice styles */
  .invoice {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .inv-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .inv-label {
    font-size: 0.5rem;
    color: var(--text-muted);
  }

  .inv-num {
