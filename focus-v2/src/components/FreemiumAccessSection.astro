      0 0 0 1px rgba(212, 175, 55, 0.4),
      0 0 80px rgba(212, 175, 55, 0.25),
      0 0 140px rgba(212, 175, 55, 0.12),
      inset 0 2px 4px rgba(255, 255, 255, 0.08);
