<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    var freeForm = document.getElementById('free-access-form');
    var freeSubmit = document.getElementById('free-submit');
    var emailInput = document.getElementById('free-email');
    var emailError = document.getElementById('email-error');
    var successModal = document.getElementById('success-modal');

    // Clear error on input
    if (emailInput) {
      emailInput.addEventListener('input', function() {
        if (emailError) emailError.classList.remove('show');
        emailInput.classList.remove('error');
      });
    }

    if (freeForm) {
      freeForm.addEventListener('submit', async function(e) {
        e.preventDefault();

        var firstnameInput = document.getElementById('free-firstname');
        var lastnameInput = document.getElementById('free-lastname');

        var firstname = firstnameInput ? firstnameInput.value.trim() : '';
        var lastname = lastnameInput ? lastnameInput.value.trim() : '';
        var email = emailInput ? emailInput.value.trim() : '';

        if (!firstname || !lastname || !email) return;

        // Clear previous error
        if (emailError) emailError.classList.remove('show');
        if (emailInput) emailInput.classList.remove('error');

        // Loading state
        if (freeSubmit) freeSubmit.classList.add('loading');

        try {
          // Store locally
          try {
            localStorage.setItem('focus_free_user', JSON.stringify({ firstname: firstname, lastname: lastname, email: email }));
          } catch (storageErr) {
            console.warn('LocalStorage not available');
          }

          var hostname = window.location.hostname;
          var apiBase = (hostname === 'localhost' || hostname === '127.0.0.1')
            ? 'http://127.0.0.1:3010'
            : 'https://espace.mentalitefocus.com';
          var apiUrl = apiBase + '/api/free-access';

          try {
            var response = await fetch(apiUrl, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              mode: 'cors',
              credentials: 'omit',
              body: JSON.stringify({
                email: email,
                firstName: firstname,
                lastName: lastname
              })
            });

            // Handle 409 - Email already registered
            if (response.status === 409) {
              if (emailError) emailError.classList.add('show');
              if (emailInput) emailInput.classList.add('error');
              if (freeSubmit) freeSubmit.classList.remove('loading');
              console.log('⚠️ Email déjà enregistré');
              return;
            }

            // Handle other errors
            if (!response.ok) {
              console.error('Free access API error:', response.status);
              if (freeSubmit) freeSubmit.classList.remove('loading');
              return;
            }

          } catch (apiError) {
            console.error('Free access API request failed:', apiError);
            if (freeSubmit) freeSubmit.classList.remove('loading');
            return;
          }

          // SUCCESS - API returned 200
          console.log('✅ Compte créé avec succès');

          // Klaviyo tracking
          if (typeof window.klaviyo !== 'undefined') {
            window.klaviyo.push(['identify', {
              '$email': email,
              '$first_name': firstname,
              '$last_name': lastname,
              '$source': 'Focus Freemium Page'
            }]);

            window.klaviyo.push(['track', 'Free Discord Signup', {
              'source': 'Freemium Access Form',
              'page': window.location.href,
              'timestamp': new Date().toISOString()
            }]);

            console.log('✅ Klaviyo - Free Discord Signup tracked');
          }

          // Meta Pixel
          if (typeof fbq !== 'undefined') {
            fbq('track', 'Lead', {
              content_name: 'Free Discord Access',
              content_category: 'freemium'
            });
            console.log('✅ Meta - Lead tracked');
          }

          // Show success modal with Focus logo animation
          if (successModal) {
            successModal.classList.add('show');
          }

          // Redirect to Discord after 3 seconds
          setTimeout(function() {
            window.location.href = 'https://discord.gg/Z8qWfPyYMY';
          }, 3000);

        } catch (error) {
          console.error('Form submission error:', error);
        }

        if (freeSubmit) freeSubmit.classList.remove('loading');
      });
    }
  });
</script>

<style>
  .freemium-section {
    position: relative;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 5rem 1.5rem;
  }

  /* Header */
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1.25rem;
    border-radius: 9999px;
    border: 1px solid var(--border-medium);
    background: var(--bg-card);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: var(--gold);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.2); }
  }

  .section-title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 900;
    line-height: 0.9;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .text-gradient {
    background: linear-gradient(135deg, var(--gold-light), var(--gold), var(--gold-dark));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-desc {
    font-size: 1.125rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .section-desc strong {
    color: var(--gold);
    font-weight: 700;
  }

  .section-subtitle {
    text-align: center;
    font-size: 0.875rem;
    color: var(--text-muted);
    font-style: italic;
    margin-top: 2rem;
  }

  /* Cards Container */
  .cards-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .cards-container {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
  }

  @media (min-width: 1024px) {
    .cards-container {
      gap: 2.5rem;
    }
  }

  /* Access Card - Format vertical */
  .access-card {
    position: relative;
    border-radius: 20px;
    padding: 1.75rem 1.5rem;
    overflow: hidden;
    transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
    transform-style: preserve-3d;
  }

  @media (min-width: 640px) {
    .access-card {
      padding: 2rem 1.75rem;
      border-radius: 24px;
    }
  }

  .card-texture {
    position: absolute;
    inset: 0;
    background:
      repeating-linear-gradient(
        45deg,
        rgba(255, 255, 255, 0.01) 0px,
        transparent 1px,
        transparent 2px,
        rgba(255, 255, 255, 0.01) 3px
      );
    pointer-events: none;
  }

  .card-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  @media (min-width: 640px) {
    .card-content {
      gap: 1.5rem;
    }
  }

  /* Decorative Lines */
  .card-lines {
    position: absolute;
    top: 0;
    right: 0;
    width: 40%;
    height: 100%;
    pointer-events: none;
    overflow: hidden;
  }

  .card-lines span {
    position: absolute;
    right: 0;
    width: 150%;
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, rgba(192, 192, 192, 0.1) 50%, transparent 100%);
