  .card-glow {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: conic-gradient(
      from 0deg at 50% 50%,
      transparent 0deg,
      rgba(212, 175, 55, 0.08) 60deg,
      transparent 120deg,
      rgba(212, 175, 55, 0.06) 180deg,
      transparent 240deg,
      rgba(212, 175, 55, 0.08) 300deg,
      transparent 360deg
    );
    animation: glowRotate 10s linear infinite;
    pointer-events: none;
  }

  @keyframes glowRotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .gold-shine {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      transparent 0%,
      rgba(212, 175, 55, 0.08) 40%,
      rgba(244, 208, 63, 0.12) 50%,
      rgba(212, 175, 55, 0.08) 60%,
      transparent 100%
    );
    animation: goldShimmer 3s ease-in-out infinite;
  }

  @keyframes goldShimmer {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 1; }
  }

  .gold-particles {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .gp-dot {
    position: absolute;
    width: 4px;
    height: 4px;
    background: var(--gold);
    border-radius: 50%;
    opacity: 0;
    animation: gpFloatUp 5s ease-in-out infinite;
  }

  .gp-dot:nth-child(1) { left: 10%; bottom: 0; animation-delay: 0s; }
  .gp-dot:nth-child(2) { left: 25%; bottom: 0; animation-delay: 0.8s; }
  .gp-dot:nth-child(3) { left: 45%; bottom: 0; animation-delay: 1.6s; }
  .gp-dot:nth-child(4) { left: 65%; bottom: 0; animation-delay: 2.4s; }
  .gp-dot:nth-child(5) { left: 80%; bottom: 0; animation-delay: 3.2s; }
  .gp-dot:nth-child(6) { left: 95%; bottom: 0; animation-delay: 4s; }

  @keyframes gpFloatUp {
    0% { opacity: 0; transform: translateY(0) scale(0.5); }
    15% { opacity: 0.8; }
    100% { opacity: 0; transform: translateY(-300px) scale(0); }
