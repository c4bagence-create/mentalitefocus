  .order-item { font-size: 10px; color: #95BF47; padding: 3px 0; opacity: 0; animation: slideIn 0.5s forwards; }
  @keyframes slideIn { to { opacity: 1; transform: translateX(0); } from { opacity: 0; transform: translateX(-10px); } }

  /* TERMINAL / AI */
  .terminal-bar { display: flex; align-items: center; gap: 6px; padding: 8px 12px; background: #000; border-radius: 16px 16px 0 0; margin: -18px -18px 10px -18px; }
  .dot { width: 10px; height: 10px; border-radius: 50%; }
