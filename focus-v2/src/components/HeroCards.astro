<style>
  .cards-wrapper { position: absolute; inset: 0; pointer-events: none; z-index: 10; }

  .hero-card {
    position: absolute; pointer-events: auto;
    background: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.7);
    font-family: 'Space Grotesk', sans-serif;
    animation: float 6s ease-in-out infinite;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    will-change: transform;
  }

  .hero-card:hover {
    transform: translateY(-10px) scale(1.05) !important;
    box-shadow: 0 35px 60px -15px rgba(212, 175, 55, 0.5);
    z-index: 30;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(var(--r, 0deg)); }
    50% { transform: translateY(-12px) rotate(var(--r, 0deg)); }
  }

  /* BRANDED */
  .card-shopify { background: linear-gradient(135deg, #002e25, #004c3f); border: 2px solid #95BF47; }
  .card-gpt { background: linear-gradient(145deg, #0a0a0a, #111); border: 1px solid #D4AF37; overflow: hidden; }
  .card-stripe { background: linear-gradient(135deg, #635BFF, #4B45B2); border: none; }
  .card-bitcoin { background: linear-gradient(135deg, #0a0a0a, #1a1a1a); border: 2px solid #F7931A; }
  .card-tiktok { background: linear-gradient(135deg, #000, #0a0a0a); border: 2px solid #FE2C55; }
  .card-youtube { background: linear-gradient(135deg, #1a1a1a, #0f0f0f); border-left: 4px solid #FF0000; }
  .card-qonto { background: linear-gradient(135deg, #1a1d2e, #262A3E); border: 2px solid #6B5AED; }
  .card-revolut { background: linear-gradient(135deg, #0f1113, #191C1F); border: 2px solid #6FA0FF; }

  .notif-badge {
    position: absolute; top: 0; left: 0; width: 100%;
    font-weight: 800; font-size: 10px; text-align: center; padding: 6px 0;
    letter-spacing: 0.5px; transform: translateY(-100%);
    transition: transform 0.3s ease; border-radius: 16px 16px 0 0;
  }
  .hero-card:hover .notif-badge, .hero-card.show-notif .notif-badge { transform: translateY(0); }

  /* Live indicators */
  .live-indicator { font-size: 9px; font-weight: 800; color: #22c55e; background: rgba(34,197,94,0.2); padding: 3px 8px; border-radius: 4px; animation: livePulse 1.5s infinite; }
  .live-badge { font-size: 8px; font-weight: 800; color: #22c55e; background: rgba(34,197,94,0.2); padding: 2px 6px; border-radius: 4px; margin-left: auto; animation: livePulse 1.5s infinite; }
  @keyframes livePulse { 0%,100% { opacity: 1; } 50% { opacity: 0.5; } }

  .card-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 12px; }
  .logo-svg { height: 40px; width: auto; }
  .pulse-dot { width: 10px; height: 10px; border-radius: 50%; animation: pulse 2s infinite; }
  .glow-pink { background: #FE2C55; box-shadow: 0 0 15px #FE2C55; }
  @keyframes pulse { 0%,100% { opacity: 1; transform: scale(1); } 50% { opacity: 0.6; transform: scale(1.3); } }
  .card-value { font-size: 36px; font-weight: 700; color: white; letter-spacing: -1px; }
  .card-label { font-size: 11px; font-family: monospace; text-transform: uppercase; margin-top: 4px; }

  /* SHOPIFY orders */
