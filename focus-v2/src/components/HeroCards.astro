  .tt-logo { width: 50px; height: 50px; filter: drop-shadow(0 0 10px rgba(254,44,85,0.5)); }
  .tt-views { font-size: 38px; font-weight: 900; color: white; }
  .tt-label { font-size: 11px; color: #9CA3AF; text-transform: uppercase; margin-bottom: 10px; }
  .tt-tags { display: flex; gap: 10px; }
  .tag-likes { font-size: 11px; padding: 5px 12px; border-radius: 12px; background: rgba(254,44,85,0.2); color: #FE2C55; font-weight: 600; }
  .tag-comments { font-size: 11px; padding: 5px 12px; border-radius: 12px; background: rgba(0,242,234,0.2); color: #00F2EA; font-weight: 600; }

  /* YOUTUBE */
  .yt-header { display: flex; align-items: center; gap: 10px; margin-bottom: 8px; }
  .yt-icon { width: 32px; height: 32px; background: #FF0000; border-radius: 6px; display: flex; align-items: center; justify-content: center; }
  .yt-play { width: 0; height: 0; border-top: 6px solid transparent; border-left: 10px solid white; border-bottom: 6px solid transparent; margin-left: 2px; }
  .yt-name { font-weight: 700; color: white; font-size: 18px; }
  .yt-bar { height: 4px; background: rgba(255,255,255,0.2); border-radius: 2px; margin-top: 10px; overflow: hidden; }
  .yt-progress { height: 100%; background: #FF0000; border-radius: 2px; transition: width 0.5s ease; }

  /* QONTO */
  .qonto-header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 10px; }
  .qonto-logo { height: 28px; }
  .qonto-val { font-size: 32px; font-weight: 700; color: #63EBE4; }
  .qonto-progress { height: 4px; background: rgba(99,235,228,0.2); border-radius: 2px; margin-top: 10px; overflow: hidden; }
  .qonto-bar { height: 100%; background: #63EBE4; border-radius: 2px; transition: width 0.5s ease; }

  /* REVOLUT */
  .revolut-header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 12px; }
  .revolut-logo { height: 26px; }
  .revolut-list { display: flex; flex-direction: column; gap: 6px; min-height: 50px; }
  :global(.rev-item) { display: flex; justify-content: space-between; font-size: 12px; animation: revSlide 0.4s ease; }
  :global(.rev-item span:first-child) { color: #C6D9FD; }
  :global(.rev-item span:last-child) { color: #FFF; font-weight: 700; }
  @keyframes revSlide { from { opacity: 0; transform: translateY(-10px); } to { opacity: 1; transform: translateY(0); } }

  /* ============================================
     DESKTOP (> 1200px) - CARTES RAPPROCH√âES
     ============================================ */
  @media (min-width: 1201px) {
    #card-shopify { width: 260px; padding: 20px; top: 15%; left: 5%; --r: -1deg; animation-delay: 0s; }
    #card-gpt { width: 220px; padding: 16px; top: 14%; left: 36%; --r: 1deg; animation-delay: 0.5s; }
    #card-crypto { width: 230px; padding: 18px; top: 12%; right: 6%; --r: 2deg; animation-delay: 0.3s; }
