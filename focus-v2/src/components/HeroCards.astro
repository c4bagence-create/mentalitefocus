<script>
  document.addEventListener('DOMContentLoaded', () => {
    // ========================================
    // SMART INTERVAL MANAGER
    // Pauses intervals when hero section is not visible
    // ========================================
    const heroSection = document.getElementById('hero');
    const intervals = [];
    let isVisible = true;
    
    // Track visibility of hero section
    const heroObserver = new IntersectionObserver((entries) => {
      isVisible = entries[0].isIntersecting;
      if (isVisible) {
        startAllIntervals();
      } else {
        stopAllIntervals();
      }
    }, { threshold: 0.1 });
    
    if (heroSection) heroObserver.observe(heroSection);
    
    // Also pause when tab is hidden
    document.addEventListener('visibilitychange', () => {
      if (document.hidden) stopAllIntervals();
      else if (isVisible) startAllIntervals();
    });
    
    const intervalConfigs = [];
    
    const createInterval = (callback, delay) => {
      const config = { callback, delay, id: null };
      intervalConfigs.push(config);
      if (isVisible) config.id = setInterval(callback, delay);
    };
    
    const startAllIntervals = () => {
      intervalConfigs.forEach(config => {
        if (!config.id) config.id = setInterval(config.callback, config.delay);
      });
    };
    
    const stopAllIntervals = () => {
      intervalConfigs.forEach(config => {
        if (config.id) { clearInterval(config.id); config.id = null; }
      });
    };

    // === SHOPIFY ANIMATION ===
    let shopVal = 1420;
    const shopEl = document.getElementById('shop-val');
    const order1 = document.getElementById('order1');
    const order2 = document.getElementById('order2');
    let orderNum = 4523;
    
    createInterval(() => {
      const add = Math.floor(Math.random() * 150) + 50;
      shopVal += add;
      if (shopEl) shopEl.textContent = shopVal.toLocaleString('fr-FR') + ' ‚Ç¨';
      if (order1 && order2) {
        order2.textContent = order1.textContent;
        order1.textContent = `üì¶ Commande #${orderNum++}`;
        order1.style.animation = 'none';
        order1.offsetHeight;
        order1.style.animation = 'slideIn 0.5s forwards';
      }
    }, 3000);

    // === FOCUS AI TYPING ===
    const commands = ['init_focus()', 'load_ai_model()', 'connect_members()', 'sync_data()', 'ACCESS GRANTED ‚úì'];
    const cmdEl = document.getElementById('ai-cmd');
    const outputEl = document.getElementById('ai-output');
    let cmdIndex = 0;
    let charIndex = 0;
    
    const typeCommand = () => {
      if (!cmdEl || !outputEl || !isVisible) return;
      const cmd = commands[cmdIndex % commands.length];
      
      if (charIndex < cmd.length) {
        cmdEl.textContent += cmd[charIndex];
        charIndex++;
        setTimeout(typeCommand, 60);
      } else {
        setTimeout(() => {
          outputEl.textContent = cmdIndex === 4 ? 'üü¢ ACCESS GRANTED' : '‚úì Done';
          setTimeout(() => {
            cmdEl.textContent = '';
            outputEl.textContent = '';
            charIndex = 0;
            cmdIndex++;
            setTimeout(typeCommand, 500);
          }, 1500);
        }, 300);
      }
    };
    setTimeout(typeCommand, 1000);

    // === CRYPTO CHART ===
    const chart = document.getElementById('crypto-chart');
    if (chart) {
      for (let i = 0; i < 14; i++) {
        const bar = document.createElement('div');
        bar.className = 'crypto-bar';
        bar.style.height = `${Math.random() * 50 + 40}%`;
        chart.appendChild(bar);
      }
      createInterval(() => {
        chart.querySelectorAll('.crypto-bar').forEach((bar) => {
          (bar as HTMLElement).style.height = `${Math.random() * 50 + 40}%`;
        });
      }, 2000);
    }

    // === BITCOIN LIVE ===
    createInterval(() => {
      const el = document.getElementById('btc-val');
      const pct = document.getElementById('btc-percent');
      if (!el || !pct) return;
      const base = 98420, v = base + Math.floor((Math.random() - 0.5) * 800);
      const p = ((v - base) / base * 100).toFixed(2);
      el.textContent = '$' + v.toLocaleString('en-US');
      const isUp = parseFloat(p) >= 0;
      pct.textContent = (isUp ? '+' : '') + p + '%';
      pct.style.color = isUp ? '#22c55e' : '#ef4444';
      pct.style.background = isUp ? 'rgba(34,197,94,0.2)' : 'rgba(239,68,68,0.2)';
    }, 2500);

    // === STRIPE GRAPH ===
    const stripeGraph = document.getElementById('stripe-graph');
    if (stripeGraph) {
      for (let i = 0; i < 8; i++) {
        const bar = document.createElement('div');
        bar.className = 'stripe-bar';
        bar.style.height = `${Math.random() * 60 + 30}%`;
        stripeGraph.appendChild(bar);
      }
      createInterval(() => {
        const bars = stripeGraph.querySelectorAll('.stripe-bar');
        bars.forEach((bar, i) => {
          (bar as HTMLElement).style.height = `${Math.random() * 60 + 30}%`;
          bar.classList.toggle('active', i === bars.length - 1);
        });
      }, 2500);
    }

    // === QONTO ANIMATION ===
    let qontoVal = 4300;
    const qontoEl = document.getElementById('qonto-val');
    const qontoBar = document.getElementById('qonto-bar');
    createInterval(() => {
      qontoVal += Math.floor(Math.random() * 500) + 100;
      if (qontoEl) qontoEl.textContent = '+ ' + qontoVal.toLocaleString('fr-FR') + ' ‚Ç¨';
      if (qontoBar) qontoBar.style.width = `${Math.min((qontoVal / 10000) * 100, 100)}%`;
    }, 4000);

    // === TIKTOK ANIMATION ===
    let ttViews = 10200000;
    let ttLikes = 892000;
    const ttViewsEl = document.getElementById('tt-views');
    const ttLikesEl = document.getElementById('tt-likes');
    createInterval(() => {
      ttViews += Math.floor(Math.random() * 50000) + 10000;
      ttLikes += Math.floor(Math.random() * 1000) + 200;
      if (ttViewsEl) ttViewsEl.textContent = (ttViews / 1000000).toFixed(1) + 'M';
      if (ttLikesEl) ttLikesEl.textContent = (ttLikes / 1000).toFixed(0) + 'K';
    }, 3500);

    // === YOUTUBE PROGRESS ===
    const ytProgress = document.getElementById('yt-progress');
    let ytWidth = 65;
    createInterval(() => {
      ytWidth = Math.min(ytWidth + Math.random() * 3, 95);
      if (ytProgress) ytProgress.style.width = `${ytWidth}%`;
    }, 3000);

    // === REVOLUT TRANSACTIONS ===
    const transactions = [
      ['‚úàÔ∏è Air France', '- 850 ‚Ç¨'], ['üçΩÔ∏è Restaurant', '- 320 ‚Ç¨'], ['üõí Amazon', '- 156 ‚Ç¨'],
      ['‚òï Starbucks', '- 12 ‚Ç¨'], ['üöó Uber', '- 45 ‚Ç¨'], ['üéÆ Steam', '- 60 ‚Ç¨'],
      ['üì± Apple', '- 1,200 ‚Ç¨'], ['üëú Gucci', '- 890 ‚Ç¨'], ['üçï Deliveroo', '- 35 ‚Ç¨']
    ];
    const revList = document.getElementById('revolut-list');
    let revIndex = 0;
    
    const addTransaction = () => {
      if (!revList) return;
      const [name, amount] = transactions[revIndex % transactions.length];
      const item = document.createElement('div');
      item.className = 'rev-item';
      item.innerHTML = `<span>${name}</span><span>${amount}</span>`;
      revList.insertBefore(item, revList.firstChild);
      if (revList.children.length > 3) revList.removeChild(revList.lastChild);
      revIndex++;
    };
    addTransaction(); addTransaction();
    createInterval(addTransaction, 4000);

    // === NOTIFICATIONS (desktop only) ===
    if (window.innerWidth > 768) {
      const cards = ['card-shopify', 'card-stripe', 'card-crypto', 'card-tiktok', 'card-youtube', 'card-qonto', 'card-revolut'];
      createInterval(() => {
        const card = document.getElementById(cards[Math.floor(Math.random() * cards.length)]);
        if (card) { card.classList.add('show-notif'); setTimeout(() => card.classList.remove('show-notif'), 2500); }
      }, 3000);
    }
  });
