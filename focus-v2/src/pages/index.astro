  .price-slam-btn {
    position: relative;
    display: inline-block;
    padding: 1rem 2.5rem;
    background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 50%, #d97706 100%);
    color: black;
    font-family: var(--font-display);
    font-weight: 900;
    font-size: 1.5rem;
    text-decoration: none;
    transform: translateY(-100vh) rotate(-8deg) scale(1.5);
    opacity: 0;
    box-shadow: 
      0 20px 60px rgba(245, 158, 11, 0.5),
      0 0 0 4px rgba(0, 0, 0, 0.1) inset;
    z-index: 20;
    cursor: pointer;
    overflow: hidden;
    border-radius: 4px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .price-slam-btn.slammed {
    animation: priceSlam 0.8s cubic-bezier(0.22, 1, 0.36, 1) forwards;
  }

  @keyframes priceSlam {
    0% {
      transform: translateY(-100vh) rotate(-8deg) scale(1.5);
      opacity: 0;
    }
    50% {
      transform: translateY(10px) rotate(-2deg) scale(1.1);
      opacity: 1;
    }
    70% {
      transform: translateY(-8px) rotate(-3deg) scale(1.02);
    }
    85% {
      transform: translateY(4px) rotate(-1deg) scale(0.98);
    }
    100% {
      transform: translateY(0) rotate(-2deg) scale(1);
      opacity: 1;
    }
  }

  .price-slam-btn:hover {
    transform: translateY(-3px) rotate(-2deg) scale(1.05) !important;
    box-shadow: 
      0 30px 80px rgba(245, 158, 11, 0.6),
      0 0 0 4px rgba(0, 0, 0, 0.1) inset;
  }

  .price-text {
    position: relative;
    z-index: 2;
    text-shadow: 0 1px 0 rgba(255, 255, 255, 0.3);
  }

  .price-flash {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.6) 50%,
      transparent 100%
    );
    transform: translateX(-100%);
    opacity: 0;
  }

  .price-slam-btn.slammed .price-flash {
    animation: priceFlash 0.4s ease 0.6s forwards;
  }

  @keyframes priceFlash {
    0% { transform: translateX(-100%); opacity: 1; }
    100% { transform: translateX(100%); opacity: 0; }
  }

  /* Impact effect */
  .slam-impact {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 200px;
    height: 200px;
    transform: translate(-50%, -50%) scale(0);
    border-radius: 50%;
    background: radial-gradient(circle, rgba(245, 158, 11, 0.4) 0%, transparent 70%);
    pointer-events: none;
    opacity: 0;
  }

  .slam-impact.active {
    animation: impactWave 0.6s ease-out forwards;
  }

  @keyframes impactWave {
    0% {
      transform: translate(-50%, -50%) scale(0);
      opacity: 1;
    }
    100% {
      transform: translate(-50%, -50%) scale(3);
      opacity: 0;
    }
  }

  /* Responsive */
