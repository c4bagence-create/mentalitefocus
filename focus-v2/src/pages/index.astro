  <script>
    // Footer animations
    document.addEventListener('DOMContentLoaded', () => {
      // ===== PRICE TAG - Simple animation =====
      const priceTag = document.getElementById('price-tag');
      
      if (priceTag) {
        // Trigger tag land animation after reading title
        setTimeout(() => {
          priceTag.classList.add('landed');
        }, 1200);
      }

      // Stats counter animation
      const observerOptions = { threshold: 0.5 };
      const statsObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const stats = entry.target.querySelectorAll('[data-count]');
            stats.forEach(stat => {
              const target = parseInt(stat.dataset.count);
              let current = 0;
              const increment = target / 50;
              const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                  current = target;
                  clearInterval(timer);
                }
                stat.textContent = Math.floor(current) + (target > 100 ? '+' : '');
              }, 30);
            });
            statsObserver.unobserve(entry.target);
          }
        });
      }, observerOptions);
      
      const footerStats = document.querySelector('.footer-stats');
      if (footerStats) statsObserver.observe(footerStats);
      
      // Scroll to top
      const scrollTopBtn = document.getElementById('scroll-top');
      scrollTopBtn?.addEventListener('click', () => {
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });

      // ========================================
      // KLAVIYO INTEGRATION
      // ========================================
      
      // Newsletter Form Submission
      const klaviyoForm = document.getElementById('klaviyo-form');
      const klaviyoEmail = document.getElementById('klaviyo-email');
      const klaviyoSubmit = document.getElementById('klaviyo-submit');
      const newsletterSuccess = document.getElementById('newsletter-success');
      const newsletterContainer = document.querySelector('.newsletter-container');

      if (klaviyoForm) {
        klaviyoForm.addEventListener('submit', async (e) => {
          e.preventDefault();
          
          const email = klaviyoEmail?.value?.trim();
          if (!email) return;

          // Loading state
          klaviyoSubmit?.classList.add('loading');

          try {
            // Klaviyo Identify & Track (nouvelle API avec proxy)
            if (typeof window.klaviyo !== 'undefined') {
              // Identify the user
              window.klaviyo.push(['identify', {
                '$email': email,
                '$source': 'Focus Website Footer'
              }]);

              // Track the signup event
              window.klaviyo.push(['track', 'Newsletter Signup', {
                'source': 'Footer Form',
                'page': window.location.href,
                'timestamp': new Date().toISOString()
              }]);

              console.log('‚úÖ Klaviyo - Newsletter Signup tracked');
            }

            // Show success
            newsletterContainer?.classList.add('submitted');
            newsletterSuccess?.classList.add('show');

            // Track with Meta Pixel
            if (typeof fbq !== 'undefined') {
              fbq('track', 'Lead', { content_name: 'Newsletter Footer' });
              console.log('‚úÖ Meta - Lead tracked');
            }

            // Track with Snapchat Pixel
            if (typeof snaptr !== 'undefined') {
              snaptr('track', 'SIGN_UP', {
                'sign_up_method': 'newsletter'
              });
              console.log('‚úÖ Snapchat - SIGN_UP tracked');
            }

            // Track with TikTok Pixel
            if (typeof ttq !== 'undefined') {
              ttq.track('Subscribe', {
                'content_type': 'newsletter',
                'description': 'Newsletter Footer Signup'
              });
              console.log('‚úÖ TikTok - Subscribe tracked');
            }

          } catch (error) {
            console.error('Newsletter signup error:', error);
          }

          klaviyoSubmit?.classList.remove('loading');
        });
      }

      // ========================================
      // CTA CLICK TRACKING
      // ========================================
      
      // Track all CTA clicks
      const ctaSelectors = [
        '.premium-cta',           // CTAs entre sections
        '.card-btn',              // Pricing CTAs
        '.price-tag',             // Hero CTA
        '[href*="stripe"]',       // Stripe links
        '[href*="discord"]',      // Discord links
        'a[href="#pricing"]',     // Links to pricing
        'a[href="#premium-card"]' // Direct card links
      ];

      const allCTAs = document.querySelectorAll(ctaSelectors.join(', '));
      
      allCTAs.forEach(cta => {
        cta.addEventListener('click', () => {
          const ctaText = cta.textContent?.trim() || 'Unknown CTA';
          const ctaHref = cta.getAttribute('href') || '';
          const sectionId = cta.closest('section')?.id || 'unknown';

          // Klaviyo Track
          if (typeof _learnq !== 'undefined') {
            _learnq.push(['track', 'CTA Clicked', {
              'cta_text': ctaText.substring(0, 50),
              'cta_href': ctaHref,
              'section': sectionId,
              'page': window.location.href,
              'timestamp': new Date().toISOString()
            }]);
          }

          // Meta Pixel Track
          if (typeof fbq !== 'undefined') {
            fbq('trackCustom', 'CTAClick', {
              cta_text: ctaText.substring(0, 50),
              section: sectionId
            });
          }

          // Snapchat Pixel Track
          if (typeof snaptr !== 'undefined') {
            // Si c'est un lien Stripe = InitiateCheckout
            if (ctaHref.includes('stripe')) {
              snaptr('track', 'START_CHECKOUT', {
                'currency': 'EUR',
                'price': 9.90,
                'item_category': 'Focus Business Membership'
              });
            } else {
              snaptr('track', 'VIEW_CONTENT', {
                'content_type': 'cta_click',
                'item_category': sectionId
              });
            }
          }

          // TikTok Pixel Track
          if (typeof ttq !== 'undefined') {
            // Si c'est un lien Stripe = InitiateCheckout
            if (ctaHref.includes('stripe')) {
              ttq.track('InitiateCheckout', {
                'value': 9.90,
                'currency': 'EUR',
                'content_type': 'product',
                'content_name': 'Focus Business Membership'
              });
            } else {
              ttq.track('ClickButton', {
                'content_type': 'cta',
                'content_name': ctaText.substring(0, 50)
              });
            }
          }

          console.log('üìä CTA Tracked:', ctaText.substring(0, 30), '| Section:', sectionId);
        });
      });

      // Track Pricing Card Views
